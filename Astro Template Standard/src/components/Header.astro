---
import { site } from '../config/site';
---

<header class="sticky top-0 z-50 bg-primary-600 shadow-lg">
  <div class="max-w-6xl mx-auto px-4 sm:px-5 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">

      <!-- Logo + Business Name -->
      <a href="/" class="flex items-center gap-2 md:gap-3 group">
        <!-- Logo Icon -->
        <div class="w-9 h-9 md:w-10 md:h-10 rounded-xl bg-white flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 md:w-6 md:h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </div>

        <!-- Business Name -->
        <div>
          <div class="text-base md:text-lg font-bold text-white group-hover:text-white/90 transition-colors">
            {site.businessName}
          </div>
          <div class="hidden sm:block text-xs md:text-sm text-white/80">
            {site.tagline}
          </div>
        </div>
      </a>

      <!-- Phone CTA Button - Single button for all screen sizes -->
      <a
        href={`tel:${site.phoneLink}`}
        class="flex items-center gap-2 bg-orange-600 hover:bg-orange-700 active:bg-orange-800 text-white font-bold px-4 py-2.5 md:px-6 md:py-3 rounded-lg transition-colors shadow-md hover:shadow-lg"
      >
        <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <span class="text-sm md:text-base">{site.phone}</span>
      </a>

    </div>
  </div>
</header>
