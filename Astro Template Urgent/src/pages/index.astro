---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import { site, services, neighborhoods } from '../config/site';

// ============================================
// PAGE METADATA
// ============================================
const pageData = {
  metaTitle: `${site.niche} Services in ${site.city}, ${site.state} | ${site.businessName}`,
  metaDescription: `Professional ${site.nicheLowercase} services in ${site.city}, ${site.state}. Licensed experts, ${site.rating}-star rated, ${site.yearsInBusiness} years experience. Call ${site.phone} for a free estimate.`,
};

// ============================================
// HERO SECTION CONTENT
// ============================================
const heroContent = {
  badge: `ðŸš¨ 24/7 Emergency Response`,
  headline: `Water Damage Restoration Austin`,
  subheadline: `Flooded basement? Burst pipe? Our emergency team responds in 30 minutes or less.`,
  trustBadges: ['30-Minute Response', '24/7 Available', 'Licensed & Insured', 'Insurance Accepted'],
};

// ============================================
// SERVICES GRID SECTION - Links DOWN to Silo Heads
// ============================================
const servicesContent = {
  headline: 'Emergency Services We Provide',
  subheadline: 'Immediate response for critical situations',
  services: [
    {
      title: 'Water Damage Emergency',
      slug: 'general-maintenance',
      description: 'Immediate water extraction, drying, and restoration to prevent further damage.',
      icon: 'tools',
    },
    {
      title: 'Fire & Smoke Restoration',
      slug: 'appliance-repair',
      description: 'Complete fire damage restoration including smoke removal and reconstruction.',
      icon: 'cog',
    },
    {
      title: 'Sewage Backup Cleanup',
      slug: 'emergency-services',
      description: 'Safe removal and sanitization of sewage backups with 24/7 availability.',
      icon: 'lightning',
    },
  ],
};

// ============================================
// ABOUT PREVIEW SECTION
// ============================================
const aboutContent = {
  headline: `When Disaster Strikes, We're Ready`,
  subheadline: `${site.yearsInBusiness} years of emergency response experience`,
  description: `${site.businessName} specializes in emergency restoration services when you need help most. Our certified technicians are available 24/7 with rapid response times, advanced equipment, and direct insurance billing. We understand the stress of an emergency and work quickly to minimize damage and restore your property.`,
  image: 'https://images.pexels.com/photos/1266025/pexels-photo-1266025.jpeg?w=500&h=400&fit=crop',
  imageAlt: 'Emergency response team at work',
};

// ============================================
// TESTIMONIALS SECTION
// ============================================
const testimonialsContent = {
  headline: 'What Our Customers Say',
  subheadline: 'Real reviews from real customers',
  testimonials: [
    {
      name: 'Sarah Johnson',
      location: 'Downtown Austin',
      rating: 5,
      text: 'Excellent service from start to finish. The team was professional, punctual, and did outstanding work. Highly recommend!',
    },
    {
      name: 'Michael Chen',
      location: 'North Austin',
      rating: 5,
      text: 'Very impressed with the quality of work and attention to detail. They exceeded my expectations and stayed within budget.',
    },
    {
      name: 'Emily Rodriguez',
      location: 'South Austin',
      rating: 5,
      text: 'Fast, reliable, and affordable. The technician was knowledgeable and took time to explain everything. Will definitely use again!',
    },
  ],
};

// ============================================
// SERVICE AREAS SECTION
// ============================================
const serviceAreasContent = {
  headline: 'Service Areas',
  subheadline: `Serving ${site.city} and surrounding communities`,
  description: `We proudly serve the entire ${site.serviceArea}, including all major neighborhoods and surrounding communities. Our local presence means faster response times and personalized service from professionals who know your area.`,
  areas: [
    'Downtown Austin',
    'North Austin',
    'South Austin',
    'East Austin',
    'West Austin',
    'Round Rock',
    'Pflugerville',
    'Cedar Park',
  ],
};


// ============================================
// NEIGHBORHOODS SECTION - Links to neighborhood info pages
// ============================================
const neighborhoodsContent = {
  headline: 'Areas We Serve',
  subheadline: `Proudly serving ${site.city} and surrounding neighborhoods`,
  areas: neighborhoods,
};


// ============================================
// FAQ SECTION
// ============================================
const faqContent = {
  headline: 'Frequently Asked Questions',
  questions: [
    { 
      q: 'Do you offer free estimates?', 
      a: `Yes, we provide free, no-obligation estimates for all ${site.nicheLowercase} services.` 
    },
    { 
      q: 'Are you licensed and insured?', 
      a: `Yes, we are fully licensed and insured in ${site.state}.` 
    },
    { 
      q: 'What areas do you serve?', 
      a: `We serve ${site.city} and all surrounding neighborhoods within ${site.serviceArea}.` 
    },
    { 
      q: 'How do I schedule service?', 
      a: 'Call us or fill out the contact form to schedule a convenient time.' 
    },
    { 
      q: 'Do you offer warranties?', 
      a: 'Yes, all our work is backed by our satisfaction guarantee and warranty.' 
    },
  ],
};


// ============================================
// FINAL CTA SECTION
// ============================================
const ctaContent = {
  headline: 'Need Emergency Help Right Now?',
  subheadline: `Don't wait - every minute counts in an emergency. Call us immediately.`,
};
---

<Layout title={pageData.metaTitle} description={pageData.metaDescription}>
  <div class="bg-white text-gray-700">

    <!-- ==========================================
         SECTION 1: URGENT HERO - CRISIS RESPONSE
         ========================================== -->
    <section class="hero-section pt-12 pb-16 md:py-24 relative overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">

      <!-- Animated Background Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
      </div>

      <div class="max-w-6xl mx-auto px-4 sm:px-5 lg:px-8 relative z-10">

        <!-- Main Content -->
        <div class="text-center max-w-4xl mx-auto">

          <!-- Small Badge -->
          <div class="flex justify-center mb-6">
            <div class="inline-flex items-center gap-2 bg-accent-600/20 border border-accent-600 text-accent-400 font-bold px-5 py-2 rounded-full text-sm">
              <span>{heroContent.badge}</span>
            </div>
          </div>

          <!-- H1 Headline - White -->
          <h1 class="text-white text-4xl sm:text-5xl lg:text-6xl font-black mb-6 leading-tight">
            {heroContent.headline}
          </h1>

          <!-- Subhead - Light Gray -->
          <p class="text-gray-300 text-lg sm:text-xl mb-8 font-normal leading-relaxed">
            {heroContent.subheadline}
          </p>

          <!-- Trust Badges - Horizontal -->
          <div class="flex flex-wrap justify-center gap-3 mb-8">
            {heroContent.trustBadges.map((badge) => (
              <div class="inline-flex items-center gap-1.5 text-white text-sm font-semibold">
                <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                </svg>
                <span>{badge}</span>
              </div>
            ))}
          </div>

          <!-- PRIMARY CTA - Huge Red Button with Glow -->
          <div class="mb-4">
            <a
              href={`tel:${site.phoneLink}`}
              class="cta-glow-button w-full inline-flex items-center justify-center gap-3 bg-accent-600 hover:bg-accent-700 text-white font-black text-xl px-8 rounded-2xl shadow-2xl transition-all transform hover:scale-105"
              style="height: 64px;"
            >
              <span class="text-2xl">ðŸ“ž</span>
              <span>TAP TO CALL NOW</span>
            </a>
          </div>

          <!-- Response Time Text -->
          <p class="text-gray-400 text-sm font-medium">
            Average response time: 27 minutes
          </p>

        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 2: SERVICES GRID
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {servicesContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {servicesContent.subheadline}
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {servicesContent.services.map((service) => (
            <a
              href={`/${service.slug}-${site.citySlug}`}
              class="bg-white rounded-2xl p-8 border-2 border-gray-200 hover:shadow-xl hover:border-primary-600 transition-all group"
            >
              <!-- Icon -->
              <div class="w-14 h-14 rounded-xl bg-primary-100 flex items-center justify-center mb-6 group-hover:bg-primary-600 transition-colors">
                {service.icon === 'tools' && (
                  <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                  </svg>
                )}
                {service.icon === 'lightning' && (
                  <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                )}
                {service.icon === 'cog' && (
                  <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                {service.title}
              </h3>
              <p class="text-gray-600 mb-4">{service.description}</p>
              <span class="text-primary-600 font-semibold inline-flex items-center gap-2">
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 3: ABOUT PREVIEW
         ========================================== -->
    <section class="py-16 md:py-24 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <div class="grid lg:grid-cols-2 gap-12 items-center">

          <!-- Left Column: Image -->
          <div>
            <img
              src={aboutContent.image}
              alt={aboutContent.imageAlt}
              class="rounded-2xl shadow-xl w-full h-auto"
              width="500"
              height="400"
              loading="lazy"
            />
          </div>

          <!-- Right Column: Content -->
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
              {aboutContent.headline}
            </h2>
            <p class="text-xl text-primary-600 font-semibold mb-6">
              {aboutContent.subheadline}
            </p>
            <p class="text-gray-600 text-lg leading-relaxed mb-6">
              {aboutContent.description}
            </p>
            <a
              href="/about"
              class="inline-flex items-center gap-2 text-primary-600 font-bold hover:text-primary-700 transition-colors"
            >
              Learn More About Us
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 4: NEIGHBORHOODS GRID
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {neighborhoodsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {neighborhoodsContent.subheadline}
          </p>
        </div>

        <!-- Neighborhoods Grid -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          {neighborhoodsContent.areas.map((area) => (
            <a
              href={`/neighborhoods/${area.slug}`}
              class="bg-white rounded-xl p-6 border border-gray-200 text-center hover:shadow-lg hover:border-primary-600 transition-all group"
            >
              <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-3 group-hover:bg-primary-600 transition-colors">
                <svg class="w-5 h-5 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                {area.name}
              </span>
            </a>
          ))}
        </div>

        <!-- Don't See Your Area -->
        <p class="text-center mt-8 text-gray-600">
          Don't see your area? Call us at{' '}
          <a href={`tel:${site.phoneLink}`} class="text-blue-600 underline hover:text-blue-700">
            {site.phone}
          </a>
        </p>

      </div>
    </section>

    <!-- ==========================================
         SECTION 5: TESTIMONIALS
         ========================================== -->
    <section class="py-16 md:py-24 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {testimonialsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {testimonialsContent.subheadline}
          </p>
        </div>

        <!-- Testimonials Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {testimonialsContent.testimonials.map((testimonial) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg">
              <!-- Rating Stars -->
              <div class="flex gap-1 mb-4">
                {Array.from({ length: testimonial.rating }).map(() => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <!-- Review Text -->
              <p class="text-gray-600 mb-6 leading-relaxed">"{testimonial.text}"</p>
              <!-- Author -->
              <div class="border-t border-gray-200 pt-4">
                <p class="font-bold text-gray-900">{testimonial.name}</p>
                <p class="text-sm text-gray-500">{testimonial.location}</p>
              </div>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 6: SERVICE AREAS MAP
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {serviceAreasContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
            {serviceAreasContent.subheadline}
          </p>
          <p class="text-gray-600 max-w-3xl mx-auto leading-relaxed">
            {serviceAreasContent.description}
          </p>
        </div>

        <!-- Service Areas Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
          {serviceAreasContent.areas.map((area) => (
            <div class="flex items-center gap-2 text-gray-700">
              <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium">{area}</span>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 7: FAQ
         ========================================== -->
    <section class="py-16 md:py-24 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {faqContent.headline}
          </h2>
        </div>

        <!-- FAQ Accordion -->
        <div class="max-w-3xl mx-auto">
          {faqContent.questions.map((faq, index) => (
            <details class="group border-b border-gray-200" open={index === 0}>
              <summary class="flex items-center justify-between py-6 cursor-pointer">
                <span class="font-bold text-gray-900 text-lg pr-4">{faq.q}</span>
                <svg class="w-5 h-5 text-gray-500 flex-shrink-0 chevron-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-gray-600 pb-6 pr-8">
                {faq.a}
              </p>
            </details>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 8: FINAL URGENT CTA
         ========================================== -->
    <section class="py-16 md:py-24 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden">

      <!-- Emergency Pattern Background -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, white 35px, white 37px);"></div>
      </div>

      <div class="max-w-4xl mx-auto px-5 sm:px-8 text-center relative z-10">

        <!-- Urgent Icon -->
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-accent-600 mb-6">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>

        <h2 class="text-4xl sm:text-5xl font-black text-white mb-6">
          {ctaContent.headline}
        </h2>
        <p class="text-2xl text-accent-400 font-bold mb-10">
          {ctaContent.subheadline}
        </p>

        <!-- Large Urgent Phone Button -->
        <a
          href={`tel:${site.phoneLink}`}
          class="inline-flex items-center gap-4 bg-accent-600 hover:bg-accent-700 text-white font-black text-3xl px-12 py-7 rounded-2xl shadow-2xl hover:shadow-accent-600/50 transition-all btn-cta transform hover:scale-105 mb-8"
        >
          <svg class="w-9 h-9" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>{site.phone}</span>
        </a>

        <!-- Emergency Trust Badges -->
        <div class="flex flex-wrap justify-center gap-2 sm:gap-6 text-slate-300">
          <div class="flex items-center gap-1.5 sm:gap-2">
            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-primary-600 flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <span class="font-bold whitespace-nowrap text-xs sm:text-sm">24/7 Available</span>
          </div>
          <div class="flex items-center gap-1.5 sm:gap-2">
            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-primary-600 flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <span class="font-bold whitespace-nowrap text-xs sm:text-sm">Insurance Direct Billing</span>
          </div>
