---
import { site } from '../config/site';
---

<a
  href={`tel:${site.phoneLink}`}
  class="emergency-banner block bg-accent-600 text-white text-center py-3 px-4 font-bold text-sm sm:text-base hover:bg-accent-700 transition-colors relative overflow-hidden"
  style="min-height: 48px;"
>
  <span class="relative z-10 inline-flex items-center justify-center gap-2">
    <span class="text-lg">⚡</span>
    <span>24/7 EMERGENCY SERVICE — Call Now for Immediate Response</span>
    <span class="text-lg">⚡</span>
  </span>

  <!-- Pulse animation overlay -->
  <div class="absolute inset-0 bg-accent-700 opacity-0 animate-pulse-subtle"></div>
</a>

<style>
  @keyframes pulse-subtle {
    0%, 100% {
      opacity: 0;
    }
    50% {
      opacity: 0.2;
    }
  }

  .animate-pulse-subtle {
    animation: pulse-subtle 2s ease-in-out infinite;
  }

  .emergency-banner {
    position: sticky;
    top: 0;
    z-index: 60;
  }
</style>
