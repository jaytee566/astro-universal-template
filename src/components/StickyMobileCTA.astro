---
import { site } from '../config/site';
---

<!-- Spacer to prevent content overlap -->
<div class="h-20 md:hidden" aria-hidden="true"></div>

<!-- Sticky Mobile CTA Bar -->
<div class="fixed bottom-0 left-0 right-0 z-50 md:hidden bg-white border-t border-gray-200 shadow-lg">
  <div class="flex items-center gap-3 p-4">
    
    <!-- Text Button -->
    <a 
      href={`sms:${site.phoneLink}`}
      class="flex-1 flex items-center justify-center gap-2 bg-white border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-bold py-3 px-4 rounded-xl transition-colors"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      <span>Text</span>
    </a>
    
    <!-- Call Button (2x width) -->
    <a 
      href={`tel:${site.phoneLink}`}
      class="flex-[2] flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold py-3 px-4 rounded-xl transition-colors btn-cta"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
      <span>Call Now</span>
    </a>
    
  </div>
</div>
