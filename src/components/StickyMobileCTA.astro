---
import { site } from '../config/site';
---

<!-- Spacer to prevent content overlap - 72px for larger bar -->
<div class="h-[72px] md:hidden" aria-hidden="true"></div>

<!-- Sticky Mobile CTA Bar -->
<div class="fixed bottom-0 left-0 right-0 z-50 md:hidden bg-primary-600 shadow-[0_-4px_20px_rgba(0,0,0,0.2)]">
  <!-- Main Call Button - Full width, prominent -->
  <a
    href={`tel:${site.phoneLink}`}
    class="flex items-center justify-between px-4 py-3 text-white font-bold active:bg-primary-700 transition-colors whitespace-nowrap"
  >
    <span class="flex items-center gap-2">
      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
      Schedule Assessment
    </span>
    <span>{site.phone}</span>
  </a>
</div>
