---
import { site } from '../config/site';
---

<!-- Spacer to prevent content overlap - 72px for larger bar -->
<div class="h-[72px] md:hidden" aria-hidden="true"></div>

<!-- Sticky Mobile CTA Bar - IMPOSSIBLE TO MISS -->
<div class="fixed bottom-0 left-0 right-0 z-50 md:hidden bg-gradient-to-r from-orange-600 to-orange-500 shadow-[0_-4px_20px_rgba(0,0,0,0.2)]">
  <!-- Main Call Button - Full width, prominent -->
  <a
    href={`tel:${site.phoneLink}`}
    class="flex items-center justify-center gap-2 py-3 px-4 active:bg-orange-700 transition-colors whitespace-nowrap"
  >
    <!-- Phone Icon with pulse animation -->
    <div class="relative">
      <div class="absolute inset-0 bg-white rounded-full opacity-20 animate-ping"></div>
      <svg class="w-6 h-6 text-white relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
    </div>

    <!-- CTA Text -->
    <span class="text-white font-bold text-sm sm:text-base leading-tight">
      Call Now - Free Estimate {site.phone}
    </span>
  </a>
</div>
