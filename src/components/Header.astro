---
/**
 * Header.astro
 * 
 * Mobile-optimized header with template-specific variants
 * Based on AI Council synthesis
 * 
 * Key design decisions:
 * - Sticky header (one sticky element rule - no sticky footer on desktop)
 * - Template-specific styling and trust badges
 * - Phone always visible in header
 */

import { site } from '../config/site';

const theme = site.theme;
const phoneLink = site.phoneLink || site.phone.replace(/\D/g, '');

// Template-specific header badges
const headerBadges: Record<string, string[]> = {
  urgent: ['24/7 Emergency', 'Live Dispatch', 'Licensed & Insured'],
  premium: [],  // Premium has minimal header
  standard: ['Licensed & Insured', 'Free Estimates'],
  technical: ['EPA Certified', 'State Licensed', 'OSHA Compliant', 'Fully Insured'],
};

const badges = headerBadges[theme] || [];

// Template-specific CTA text
const ctaText: Record<string, string> = {
  urgent: 'Call Now',
  premium: 'Contact',
  standard: 'Free Quote',
  technical: 'Schedule Assessment',
};
---

<header class="sticky top-0 z-50">
  
  {/* URGENT: Dark emergency banner + dark header */}
  {theme === 'urgent' && (
    <>
      <!-- Emergency Banner -->
      <div class="bg-accent-600 text-white text-xs sm:text-sm">
        <div class="max-w-6xl mx-auto px-4 py-2 flex items-center justify-center gap-4">
          <span class="animate-pulse">⚡</span>
          <span class="font-bold">24/7 EMERGENCY SERVICE</span>
          <span>•</span>
          <a href={`tel:${phoneLink}`} class="font-bold underline">{site.phone}</a>
          <span class="animate-pulse">⚡</span>
        </div>
      </div>
      
      <!-- Main Header -->
      <div class="bg-primary-600 text-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
          <div class="flex items-center justify-between h-16">
            <a href="/" class="text-lg font-bold">
              {site.businessName}
            </a>
            <a
              href={`tel:${phoneLink}`}
              class="flex items-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold px-4 py-2.5 rounded-lg transition-colors"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="text-sm">{ctaText[theme]}</span>
            </a>
          </div>
        </div>
      </div>
    </>
  )}

  {/* PREMIUM: Minimal elegant header */}
  {theme === 'premium' && (
    <div class="bg-white border-b border-gray-100">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex items-center justify-between h-16 md:h-20">
          <a href="/" class="font-heading text-xl font-semibold text-primary-600">
            {site.businessName}
          </a>
          <div class="flex items-center gap-6">
            <nav class="hidden md:flex items-center gap-6 text-sm text-gray-600">
              <a href="#portfolio" class="hover:text-primary-600">Portfolio</a>
              <a href="#process" class="hover:text-primary-600">Process</a>
              <a href="#about" class="hover:text-primary-600">About</a>
            </nav>
            <a
              href={`tel:${phoneLink}`}
              class="text-sm font-medium text-gray-600 hover:text-primary-600"
            >
              {site.phone}
            </a>
          </div>
        </div>
      </div>
    </div>
  )}

  {/* STANDARD: Clean header with trust badges */}
  {theme === 'standard' && (
    <>
      <!-- Trust Badge Bar -->
      {badges.length > 0 && (
        <div class="bg-primary-600 text-white text-xs sm:text-sm">
          <div class="max-w-6xl mx-auto px-4 py-2 flex flex-wrap items-center justify-center gap-4">
            {badges.map((badge) => (
              <div class="flex items-center gap-1.5">
                <span class="w-4 h-4 rounded-full bg-white/20 flex items-center justify-center text-xs">✓</span>
                <span class="font-medium">{badge}</span>
              </div>
            ))}
          </div>
        </div>
      )}
      
      <!-- Main Header -->
      <div class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
          <div class="flex items-center justify-between h-16 md:h-20">
            <a href="/" class="flex items-center gap-2 group">
              <div class="w-9 h-9 rounded-xl bg-primary-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
              </div>
              <div>
                <div class="text-base font-bold text-primary-700 group-hover:text-primary-600">
                  {site.businessName}
                </div>
                <div class="hidden sm:block text-xs text-gray-500">
                  {site.tagline}
                </div>
              </div>
            </a>
            
            <div class="flex items-center gap-4">
              <span class="hidden md:block text-sm text-gray-600">{site.phone}</span>
              <a
                href={`tel:${phoneLink}`}
                class="flex items-center gap-2 btn-cta font-bold px-4 py-2.5 rounded-lg transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="text-sm">{ctaText[theme]}</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </>
  )}

  {/* TECHNICAL: Professional header with certifications */}
  {theme === 'technical' && (
    <>
      <!-- Certifications Bar -->
      <div class="bg-primary-600 text-white text-xs sm:text-sm">
        <div class="max-w-6xl mx-auto px-4 py-3 flex flex-wrap items-center justify-center gap-3 sm:gap-6">
          {badges.map((badge) => (
            <div class="flex items-center gap-2">
              <span class="inline-flex items-center justify-center w-4 h-4 rounded-full bg-accent-500">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                </svg>
              </span>
              <span class="font-medium">{badge}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Main Header -->
      <div class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
          <div class="flex items-center justify-between h-16 md:h-20">
            <a href="/" class="flex items-center gap-2 group">
              <div class="w-9 h-9 rounded-xl bg-primary-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div>
                <div class="text-base font-bold text-primary-700 group-hover:text-primary-600">
                  {site.businessName}
                </div>
                <div class="hidden sm:block text-xs text-gray-500">
                  {site.tagline}
                </div>
              </div>
            </a>

            <a
              href={`tel:${phoneLink}`}
              class="flex items-center gap-2 btn-cta font-bold px-4 py-2.5 md:px-6 md:py-3 rounded-lg transition-colors shadow-md hover:shadow-lg"
            >
              <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="text-sm md:text-base whitespace-nowrap">{ctaText[theme]}</span>
            </a>
          </div>
        </div>
      </div>
    </>
  )}
</header>
