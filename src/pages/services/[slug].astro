---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import StickyMobileCTA from '../../components/StickyMobileCTA.astro';
import TrustBadges from '../../components/TrustBadges.astro';
import { site } from '../../config/site';

// ============================================
// STATIC PATHS - Generate pages from data
// In production, this data comes from Notion JSON
// Slug format: [service-slug]-[neighborhood-slug]
// ============================================
export async function getStaticPaths() {
  // Sample neighborhoods
  const neighborhoods = [
    { slug: 'downtown', name: 'Downtown' },
    { slug: 'north-austin', name: 'North Austin' },
    { slug: 'south-austin', name: 'South Austin' },
    { slug: 'east-austin', name: 'East Austin' },
    { slug: 'west-austin', name: 'West Austin' },
  ];

  // Luxury pool & outdoor living services
  const services = [
    {
      slug: 'custom-pool-design',
      name: 'Custom Pool Design',
      description: 'Transform your backyard with award-winning custom pool designs.',
      benefits: [
        'Award-winning design expertise',
        'Bespoke layouts and features',
        'Premium materials and finishes',
        'Seamless project management',
      ],
      process: [
        { step: 'Consultation', description: 'Complimentary consultation to understand your vision' },
        { step: 'Design', description: 'Curated design concepts tailored to your property' },
        { step: 'Refinement', description: 'Collaborative refinement until every detail is perfect' },
        { step: 'Reveal', description: 'Elegant execution and final reveal' },
      ],
    },
    {
      slug: 'pool-resurfacing',
      name: 'Pool Resurfacing',
      description: "Restore your pool's beauty with premium resurfacing solutions.",
      benefits: [
        'Premium resurfacing materials',
        'Extended pool lifespan',
        'Enhanced aesthetics',
        'Meticulous craftsmanship',
      ],
      process: [
        { step: 'Assessment', description: 'Thorough evaluation of your pool condition' },
        { step: 'Curated Options', description: 'Premium finish options presented for your selection' },
        { step: 'Preparation', description: 'Expert surface preparation and attention to detail' },
        { step: 'Restoration', description: 'Flawless application and final finish' },
      ],
    },
    {
      slug: 'outdoor-living-spaces',
      name: 'Outdoor Living Spaces',
      description: 'Create stunning outdoor kitchens, patios, and entertainment areas.',
      benefits: [
        'Stunning outdoor kitchens',
        'Elegant patios and hardscape',
        'Entertainment-ready spaces',
        'Cohesive design vision',
      ],
      process: [
        { step: 'Vision', description: 'Complimentary consultation to define your outdoor vision' },
        { step: 'Design', description: 'Curated plans for kitchens, patios, and gathering areas' },
        { step: 'Build', description: 'Premium materials and expert craftsmanship' },
        { step: 'Reveal', description: 'Your new outdoor living space, ready to enjoy' },
      ],
    },
  ];

  // Generate all service+neighborhood combinations
  const paths = [];
  
  for (const neighborhood of neighborhoods) {
    for (const service of services) {
      paths.push({
        params: { slug: `${service.slug}-${neighborhood.slug}` },
        props: {
          service,
          neighborhood,
        },
      });
    }
  }

  return paths;
}

// ============================================
// PAGE PROPS
// ============================================
const { service, neighborhood } = Astro.props;

// ============================================
// PAGE METADATA - Using site config interpolation
// ============================================
const pageData = {
  metaTitle: `${service.name} in ${neighborhood.name}, ${site.city} ${site.state} | ${site.businessName}`,
  metaDescription: `Premium ${service.name.toLowerCase()} services in ${neighborhood.name}, ${site.city}. ${service.description} Call ${site.phone} to schedule a complimentary consultation.`,
};

// ============================================
// PAGE CONTENT - All interpolated from site config
// ============================================
const heroContent = {
  badge: `${service.name} Services`,
  headline: `${service.name} in ${neighborhood.name}, Austin`,
  subheadline: `${service.description} Serving ${neighborhood.name} and surrounding areas in ${site.city}, ${site.state}.`,
};

// Hero Image
const heroImageUrl = 'https://images.unsplash.com/photo-1581578731548-c64695cc6952?w=600&h=400&fit=crop';
const heroImageAlt = `${service.name} services in ${neighborhood.name}, ${site.city}`;

const benefitsContent = {
  headline: `Benefits of Professional ${service.name}`,
  subheadline: `Why ${neighborhood.name} homeowners trust us for ${service.name.toLowerCase()}`,
};

const processContent = {
  headline: `Our ${service.name} Process`,
  subheadline: `How we deliver quality ${service.name.toLowerCase()} in ${neighborhood.name}`,
};

const faqContent = {
  headline: service.slug === 'emergency-services' ? 'FAQ' : `${service.name} FAQ`,
  questions: [
    { 
      q: `How much does ${service.name.toLowerCase()} cost in ${neighborhood.name}?`, 
      a: `${service.name} costs vary based on scope and specific needs. We provide free, no-obligation estimates for all ${neighborhood.name} residents. Call ${site.phone} for a personalized quote.` 
    },
    { 
      q: `How quickly can you provide ${service.name.toLowerCase()}?`, 
      a: `We offer prompt scheduling for ${neighborhood.name} customers. Many services can be scheduled within 24-48 hours, and we offer emergency services when needed.` 
    },
    { 
      q: `Are you licensed for ${service.name.toLowerCase()} in ${site.state}?`, 
      a: `Yes, ${site.businessName} is fully licensed and insured to provide ${service.name.toLowerCase()} throughout ${site.city}, ${site.state}, including ${neighborhood.name}.` 
    },
    { 
      q: `Do you guarantee your ${service.name.toLowerCase()} work?`, 
      a: `Absolutely. All our ${service.name.toLowerCase()} work is backed by our satisfaction guarantee. We stand behind the quality of our services.` 
    },
  ],
};

const ctaContent = {
  headline: `Need ${service.name} in ${neighborhood.name}?`,
  subheadline: `Schedule a complimentary consultation with ${site.city}'s trusted ${site.nicheLowercase} professionals.`,
};
---

<Layout title={pageData.metaTitle} description={pageData.metaDescription}>
  <div class="bg-white text-gray-700">
    <Header />

    <!-- ==========================================
         BREADCRUMB - Shows hierarchy: Home > Silo Head > Current Page
         Links UP to Silo Head with exact-match anchor
         ========================================== -->
    <nav class="bg-gray-50 border-b border-gray-200">
      <div class="max-w-6xl mx-auto px-5 sm:px-8 py-4 overflow-x-auto">
        <ol class="flex items-center gap-1 sm:gap-2 text-xs sm:text-sm whitespace-nowrap">
          <li class="whitespace-nowrap">
            <a href="/" class="text-gray-600 hover:text-primary-600 transition-colors whitespace-nowrap">
              Home
            </a>
          </li>
          <li class="text-gray-400 whitespace-nowrap">/</li>
          <li class="whitespace-nowrap">
            <a
              href={`/${service.slug}-${site.citySlug}`}
              class="text-gray-600 hover:text-primary-600 transition-colors whitespace-nowrap"
            >
              {service.name} Austin TX
            </a>
          </li>
          <li class="text-gray-400 whitespace-nowrap">/</li>
          <li class="text-gray-900 font-medium whitespace-nowrap">
            {neighborhood.name}
          </li>
        </ol>
      </div>
    </nav>

    <!-- ==========================================
         SECTION 1: HERO
         ========================================== -->
    <section class="hero-section py-12 md:py-16">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <div class="grid lg:grid-cols-5 gap-12 items-center">
          
          <!-- Left Column: Content (3/5) -->
          <div class="lg:col-span-3">
            <!-- Service Badge -->
            <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-600 text-sm font-semibold px-4 py-2 rounded-full mb-6">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              <span>{heroContent.badge}</span>
            </div>

            <!-- Headline -->
            <h1 class="text-4xl sm:text-5xl font-bold hero-heading mb-6 leading-tight">
              {heroContent.headline}
            </h1>

            <!-- Subheadline -->
            <p class="text-xl hero-subheading mb-8">
              {heroContent.subheadline}
            </p>

            <!-- Trust Badges -->
            <div class="flex flex-wrap gap-4 mb-8">
              <div class="flex items-center gap-2 text-sm font-medium hero-subheading">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Licensed in {site.state}</span>
              </div>
              <div class="flex items-center gap-2 text-sm font-medium hero-subheading">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>{site.rating}-Star Rated</span>
              </div>
              <div class="flex items-center gap-2 text-sm font-medium hero-subheading">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Complimentary Consultations</span>
              </div>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href={`tel:${site.phoneLink}`}
                class="inline-flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold px-8 py-4 rounded-xl transition-colors btn-cta text-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>Call {site.phone}</span>
              </a>
              <a
                href={`/${service.slug}-${site.citySlug}`}
                class="inline-flex items-center justify-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-bold px-8 py-4 rounded-xl transition-colors text-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{service.name} Austin TX</span>
              </a>
            </div>

            <!-- Trust Badges -->
            <TrustBadges />
          </div>

          <!-- Right Column: Image (2/5) -->
          <div class="lg:col-span-2 hidden lg:block">
            <div class="relative">
              <img 
                src={heroImageUrl}
                alt={heroImageAlt}
                class="rounded-2xl shadow-2xl w-full h-auto"
                width="600"
                height="400"
                loading="eager"
              />
              <!-- Rating Badge Overlay -->
              <div class="absolute bottom-4 left-4 bg-white rounded-xl shadow-lg px-4 py-3 flex items-center gap-3">
                <div class="flex items-center gap-1">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="font-bold text-gray-900">{site.rating}</span>
                </div>
                <div class="text-sm text-gray-500">
                  {site.reviewCount} Reviews
                </div>
              </div>
            </div>
          </div>

        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 2: BENEFITS
         ========================================== -->
    <section class="py-12 md:py-16 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="mb-10">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {benefitsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl">
            {benefitsContent.subheadline}
          </p>
        </div>

        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {service.benefits.map((benefit) => (
            <div class="bg-white rounded-2xl p-6 border border-gray-200 hover:shadow-lg hover:border-primary-500 transition-all text-left">
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-lg bg-primary-100 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-900 pt-0.5">{benefit}</h3>
              </div>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 3: PROCESS
         ========================================== -->
    <section class="py-16 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {processContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {processContent.subheadline}
          </p>
        </div>

        <!-- Process Steps -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {service.process.map((item, index) => (
            <div class="relative">
              <!-- Step Number -->
              <div class="text-6xl font-bold text-primary-600 opacity-20 absolute -top-4 -left-2">
                {index + 1}
              </div>
              
              <div class="relative pt-8">
                <h3 class="text-xl font-bold text-gray-900 mb-2">{item.step}</h3>
                <p class="text-gray-600">{item.description}</p>
              </div>
              
              <!-- Connector Line (hidden on last item and mobile) -->
              {index < service.process.length - 1 && (
                <div class="hidden lg:block absolute top-1/2 -right-4 w-8 border-t-2 border-dashed border-gray-300"></div>
              )}
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 4: WHY CHOOSE US FOR THIS SERVICE
         ========================================== -->
    <section class="py-16 md:py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-10">
        
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          
          <!-- Left: Content -->
          <div class="min-w-0">
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
              Why Choose Us for {service.name} in {neighborhood.name}
            </h2>
            
            <p class="text-lg text-gray-600 mb-8">
              When you need {service.name.toLowerCase()} in {neighborhood.name}, you want a team that knows the area and delivers quality results. {site.businessName} has been serving {site.city} for over {site.yearsInBusiness} years, and we're proud to be the trusted choice for {neighborhood.name} residents.
            </p>

            <!-- Benefits List -->
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <div>
                  <span class="font-bold text-gray-900">Local {neighborhood.name} Experts</span>
                  <span class="text-gray-600"> — We know the area and respond quickly</span>
                </div>
              </div>
              
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <div>
                  <span class="font-bold text-gray-900">Licensed & Insured in {site.state}</span>
                  <span class="text-gray-600"> — Full protection for your property</span>
                </div>
              </div>
              
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <div>
                  <span class="font-bold text-gray-900">{site.rating}-Star Reviews</span>
                  <span class="text-gray-600"> — {site.reviewCount} satisfied customers</span>
                </div>
              </div>
              
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <div>
                  <span class="font-bold text-gray-900">Satisfaction Guaranteed</span>
                  <span class="text-gray-600"> — We stand behind our work</span>
                </div>
              </div>
            </div>

            <!-- CTA -->
            <div class="mt-8 flex flex-col sm:flex-row gap-4">
              <a
                href={`tel:${site.phoneLink}`}
                class="inline-flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold px-8 py-4 rounded-xl transition-colors btn-cta"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>Get a Free Quote</span>
              </a>
              <a
                href={`/${service.slug}-${site.citySlug}`}
                class="inline-flex items-center justify-center gap-2 bg-white border-2 border-primary-600 text-primary-600 hover:bg-primary-50 font-bold px-8 py-4 rounded-xl transition-colors whitespace-nowrap"
              >
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{service.name} Austin TX</span>
              </a>
            </div>
          </div>

          <!-- Right: Stats Card -->
          <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-lg min-w-0">
            <h3 class="text-xl font-bold text-gray-900 mb-6 text-center">
              {site.businessName} by the Numbers
            </h3>
            
            <div class="grid grid-cols-2 gap-6">
              <div class="text-center p-4 bg-gray-50 rounded-xl">
                <div class="text-3xl font-bold text-primary-600">{site.yearsInBusiness}</div>
                <div class="text-sm text-gray-600">Years in Business</div>
              </div>
              
              <div class="text-center p-4 bg-gray-50 rounded-xl">
                <div class="text-3xl font-bold text-primary-600">{site.rating}</div>
                <div class="text-sm text-gray-600">Star Rating</div>
              </div>
              
              <div class="text-center p-4 bg-gray-50 rounded-xl">
                <div class="text-3xl font-bold text-primary-600">{site.reviewCount}</div>
                <div class="text-sm text-gray-600">Happy Customers</div>
              </div>
              
              <div class="text-center p-4 bg-gray-50 rounded-xl">
                <div class="text-3xl font-bold text-primary-600">100%</div>
                <div class="text-sm text-gray-600">Satisfaction Goal</div>
              </div>
            </div>

            <div class="mt-6 pt-6 border-t border-gray-200 text-center">
              <p class="text-gray-600 mb-4">Serving {neighborhood.name} and all of {site.city}</p>
              <a 
                href={`tel:${site.phoneLink}`}
                class="inline-flex items-center gap-2 text-primary-600 font-bold hover:underline"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                {site.phone}
              </a>
            </div>
          </div>

        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 5: FAQ
         ========================================== -->
    <section class="py-16 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {faqContent.headline}
          </h2>
        </div>

        <!-- FAQ Accordion -->
        <div class="max-w-3xl mx-auto">
          {faqContent.questions.map((faq, index) => (
            <details class="group border-b border-gray-200" open={index === 0}>
              <summary class="flex items-center justify-between py-6 cursor-pointer">
                <span class="font-bold text-gray-900 text-lg pr-4">{faq.q}</span>
                <svg class="w-5 h-5 text-gray-500 flex-shrink-0 chevron-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-gray-600 pb-6 pr-8">
                {faq.a}
              </p>
            </details>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 6: FINAL CTA
         ========================================== -->
    <section class="py-16 md:py-20 bg-gray-900">
