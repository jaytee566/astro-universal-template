      pricingFactors: [
        { factor: 'Extent of Damage', description: 'Square footage affected and depth of water penetration into structure.' },
        { factor: 'Materials Damaged', description: 'Flooring, drywall, insulation, cabinetry, and fixtures that require replacement.' },
        { factor: 'Mold Remediation', description: 'Additional work required if mold has developed due to prolonged moisture.' },
        { factor: 'Reconstruction Scope', description: 'Level of rebuilding required from cosmetic repairs to full gut renovation.' },
      ],
    },
    {
      slug: 'emergency-water-removal',
      name: 'Emergency Water Removal',
