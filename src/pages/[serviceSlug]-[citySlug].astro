---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import { site } from '../config/site';

// ============================================
// STATIC PATHS - Generate Silo Head pages
// Route: /[service-slug]-[city-slug]
// Example: /general-maintenance-austin
// ============================================
export async function getStaticPaths() {
  // Services with their support articles (for linking DOWN into silo)
  const services = [
    {
      slug: 'general-maintenance',
      name: 'General Maintenance',
      description: 'Comprehensive maintenance services to keep your property in optimal condition. Our expert team handles all aspects of property maintenance, from routine inspections to preventive care.',
      supportArticles: [
        { slug: 'complete-guide', title: 'Complete Guide to General Maintenance' },
        { slug: 'cost-factors', title: 'General Maintenance Cost Factors' },
        { slug: 'diy-vs-professional', title: 'DIY vs Professional Maintenance' },
      ],
      benefits: [
        'Prevent costly emergency repairs',
        'Extend equipment and system lifespan',
        'Maintain property value',
        'Ensure safety and compliance',
        'Peace of mind for homeowners',
        'Scheduled service at your convenience',
      ],
      process: [
        { step: 'Assessment', title: 'Property Assessment', description: 'We conduct a thorough evaluation of your property to identify maintenance needs and potential issues before they become problems.' },
        { step: 'Plan', title: 'Custom Plan', description: 'Based on our assessment, we create a tailored maintenance plan that addresses your specific needs and budget.' },
        { step: 'Execute', title: 'Expert Service', description: 'Our licensed technicians perform all maintenance work using professional-grade tools and techniques.' },
        { step: 'Document', title: 'Documentation', description: 'We provide detailed reports of all work completed and recommendations for future maintenance.' },
      ],
      pricingFactors: [
        { factor: 'Property Size', description: 'Larger properties require more time and resources for comprehensive maintenance.' },
        { factor: 'Service Frequency', description: 'Regular scheduled maintenance is more cost-effective than one-time deep service.' },
        { factor: 'Current Condition', description: 'Properties that have been neglected may require additional initial work.' },
        { factor: 'Specific Needs', description: 'Specialized equipment or systems may require additional expertise.' },
      ],
    },
    {
      slug: 'emergency-repair',
      name: 'Emergency Repair',
      description: 'Fast-response emergency repair services available 24/7. When disaster strikes, our team is ready to respond immediately to minimize damage and restore your property.',
      supportArticles: [
        { slug: 'what-to-do-first', title: 'What To Do First in an Emergency' },
        { slug: 'emergency-costs', title: 'Understanding Emergency Repair Costs' },
        { slug: 'prevention-tips', title: 'How to Prevent Common Emergencies' },
      ],
      benefits: [
        '24/7 availability for emergencies',
        'Rapid response times',
        'Minimize property damage',
        'Experienced emergency technicians',
        'Insurance claim assistance',
        'Temporary solutions while planning permanent fixes',
      ],
      process: [
        { step: 'Call', title: 'Emergency Call', description: 'Call our 24/7 hotline and speak with a live dispatcher who will assess your situation immediately.' },
        { step: 'Dispatch', title: 'Rapid Dispatch', description: 'We dispatch the nearest available technician to your location, typically within 60 minutes.' },
        { step: 'Stabilize', title: 'Stabilization', description: 'Our first priority is stopping the damage and stabilizing your property to prevent further issues.' },
        { step: 'Restore', title: 'Full Restoration', description: 'Once stabilized, we develop and execute a complete restoration plan.' },
      ],
      pricingFactors: [
        { factor: 'Time of Service', description: 'After-hours, weekend, and holiday calls may have different rates.' },
        { factor: 'Severity', description: 'The extent of damage and complexity of repairs affects overall cost.' },
        { factor: 'Materials Needed', description: 'Emergency repairs may require expedited material procurement.' },
        { factor: 'Follow-up Work', description: 'Some emergencies require subsequent repairs once immediate issues are resolved.' },
      ],
    },
    {
      slug: 'installation',
      name: 'Installation Services',
      description: 'Professional installation services for new systems, equipment, and fixtures. Our certified installers ensure everything is set up correctly the first time, with full warranty protection.',
      supportArticles: [
        { slug: 'choosing-the-right-system', title: 'Choosing the Right System for Your Home' },
        { slug: 'installation-process', title: 'What to Expect During Installation' },
        { slug: 'warranty-coverage', title: 'Understanding Your Warranty Coverage' },
      ],
      benefits: [
        'Factory-certified installers',
        'Full manufacturer warranty protection',
        'Code-compliant installation',
        'Optimal system performance',
        'Professional cleanup after installation',
        'Training on new system operation',
      ],
      process: [
        { step: 'Consult', title: 'Consultation', description: 'We discuss your needs, preferences, and budget to recommend the best solutions for your property.' },
        { step: 'Design', title: 'System Design', description: 'Our team designs the installation plan, ensuring proper sizing and placement.' },
        { step: 'Install', title: 'Professional Install', description: 'Certified technicians complete the installation following manufacturer specifications and local codes.' },
        { step: 'Verify', title: 'Testing & Training', description: 'We thoroughly test all systems and train you on proper operation and maintenance.' },
      ],
      pricingFactors: [
        { factor: 'Equipment Selection', description: 'Higher-efficiency or premium equipment has different pricing tiers.' },
        { factor: 'Installation Complexity', description: 'Retrofit installations or challenging locations may require additional work.' },
        { factor: 'Permits & Inspections', description: 'Required permits and inspections are included in professional installations.' },
        { factor: 'Removal of Old Equipment', description: 'Disposal of existing systems may be included or additional.' },
      ],
    },
  ];

  // Neighborhoods for linking DOWN to service pages
  const neighborhoods = [
    { slug: 'downtown', name: 'Downtown' },
    { slug: 'north-austin', name: 'North Austin' },
    { slug: 'south-austin', name: 'South Austin' },
    { slug: 'east-austin', name: 'East Austin' },
    { slug: 'west-austin', name: 'West Austin' },
  ];

  // Generate paths for each service (one per city)
  return services.map((service) => ({
    params: { 
      serviceSlug: service.slug,
      citySlug: site.citySlug,
    },
    props: {
      service,
      neighborhoods,
    },
  }));
}

// ============================================
// PAGE PROPS
// ============================================
const { service, neighborhoods } = Astro.props;

// ============================================
// CRITICAL: Exact-match anchor text for Support pages
// Support pages MUST use this exact text when linking UP
// ============================================
const siloHeadAnchor = `${service.name} ${site.city} ${site.state}`;
// Example: "General Maintenance Austin TX"

// ============================================
// PAGE METADATA - This is the MONEY KEYWORD
// ============================================
const pageData = {
  metaTitle: `${service.name} in ${site.city}, ${site.state} | ${site.businessName}`,
  metaDescription: `Professional ${service.name.toLowerCase()} services in ${site.city}, ${site.state}. Licensed experts, ${site.rating}-star rated, ${site.yearsInBusiness} years experience. Call ${site.phone} for a free estimate.`,
};

// ============================================
// HERO CONTENT
// ============================================
const heroContent = {
  badge: `Professional ${service.name}`,
  headline: `${service.name} in ${site.city}, ${site.state}`,
  subheadline: service.description,
};

// Hero Image
const heroImageUrl = 'https://images.unsplash.com/photo-1621905251189-08b45d6a269e?w=600&h=400&fit=crop';
const heroImageAlt = `Professional ${service.name.toLowerCase()} in ${site.city}, ${site.state}`;

// ============================================
// ABOUT SECTION CONTENT
// ============================================
const aboutContent = {
  headline: `Professional ${service.name} in ${site.city}`,
  paragraphs: [
    `When you need ${service.name.toLowerCase()} in ${site.city}, ${site.state}, you want a team that combines local expertise with professional excellence. ${site.businessName} has been serving ${site.city} homeowners and businesses for over ${site.yearsInBusiness} years, earning a reputation as the trusted choice for ${service.name.toLowerCase()} throughout the area.`,
    `Our licensed and insured technicians understand the unique challenges that ${site.city} properties face. From the historic homes in Downtown to the newer developments in North ${site.city}, we've provided ${service.name.toLowerCase()} to every neighborhood in the region. This local experience means we arrive prepared with the right tools, knowledge, and solutions for your specific situation.`,
    `We believe in transparent pricing, honest communication, and standing behind our work. Every ${service.name.toLowerCase()} job we complete is backed by our satisfaction guarantee. With ${site.reviewCount} five-star reviews from ${site.city} customers, you can trust that we'll deliver the quality service your property deserves.`,
  ],
};

// ============================================
// FAQ CONTENT
// ============================================
const faqContent = {
  headline: `${service.name} FAQ`,
  questions: [
    {
      q: `How much does ${service.name.toLowerCase()} cost in ${site.city}?`,
      a: `${service.name} costs in ${site.city} vary based on the scope of work, property size, and specific requirements. We provide free, no-obligation estimates so you know exactly what to expect. Call ${site.phone} to schedule your free assessment.`,
    },
    {
      q: `How quickly can you provide ${service.name.toLowerCase()} in ${site.city}?`,
      a: `We offer prompt scheduling for ${site.city} customers, with most ${service.name.toLowerCase()} appointments available within 24-48 hours. For urgent situations, we also offer priority scheduling to address your needs as quickly as possible.`,
    },
    {
      q: `Are you licensed and insured for ${service.name.toLowerCase()} in ${site.state}?`,
      a: `Yes, ${site.businessName} is fully licensed, bonded, and insured to provide ${service.name.toLowerCase()} throughout ${site.city} and ${site.state}. Our credentials are current and available for verification upon request.`,
    },
    {
      q: `What areas of ${site.city} do you serve?`,
      a: `We provide ${service.name.toLowerCase()} throughout ${site.city} and surrounding areas, including Downtown, North ${site.city}, South ${site.city}, East ${site.city}, West ${site.city}, and all neighborhoods within ${site.serviceArea}.`,
    },
    {
      q: `Do you offer warranties on ${service.name.toLowerCase()}?`,
      a: `Absolutely. All ${service.name.toLowerCase()} work performed by ${site.businessName} is backed by our comprehensive satisfaction guarantee. We also honor all manufacturer warranties on equipment and materials.`,
    },
    {
      q: `Can I get a free estimate for ${service.name.toLowerCase()}?`,
      a: `Yes! We offer free, no-obligation estimates for all ${service.name.toLowerCase()} services in ${site.city}. Our technician will assess your needs and provide transparent pricing before any work begins.`,
    },
    {
      q: `Why should I choose ${site.businessName} for ${service.name.toLowerCase()}?`,
      a: `With ${site.yearsInBusiness} years serving ${site.city}, ${site.reviewCount} five-star reviews, and a commitment to quality workmanship, we've earned the trust of homeowners throughout the area. Our licensed team, transparent pricing, and satisfaction guarantee make us the preferred choice for ${service.name.toLowerCase()}.`,
    },
  ],
};

// ============================================
// CTA CONTENT
// ============================================
const ctaContent = {
  headline: `Ready for Professional ${service.name}?`,
  subheadline: `Get a free estimate from ${site.city}'s most trusted ${site.nicheLowercase} team. Call now or fill out our form for prompt service.`,
};
---

<Layout title={pageData.metaTitle} description={pageData.metaDescription}>
  <div class="bg-white text-gray-700">
    <Header />

    <!-- NO BREADCRUMB - Silo Head is the TOP of its silo (Kyle Roof) -->

    <!-- ==========================================
         SECTION 1: HERO - THE MONEY KEYWORD
         ========================================== -->
    <section class="hero-section py-16 md:py-24">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        <div class="grid lg:grid-cols-5 gap-12 items-center">
          
          <!-- Left Column: Content (3/5) -->
          <div class="lg:col-span-3">
            <!-- Service Badge -->
            <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-600 text-sm font-semibold px-4 py-2 rounded-full mb-6">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span>{heroContent.badge}</span>
            </div>

            <!-- H1 - THE MONEY KEYWORD -->
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold hero-heading mb-6 leading-tight">
              {heroContent.headline}
            </h1>

            <!-- Subheadline -->
            <p class="text-xl hero-subheading mb-8 max-w-2xl">
              {heroContent.subheadline}
            </p>

            <!-- Trust Badges -->
            <div class="flex flex-wrap gap-4 mb-8">
              {[`${site.rating}-Star Rated`, 'Licensed & Insured', `${site.yearsInBusiness} Years Experience`, 'Free Estimates'].map((badge) => (
                <div class="flex items-center gap-2 text-sm font-medium hero-subheading">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{badge}</span>
                </div>
              ))}
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a 
                href={`tel:${site.phoneLink}`}
                class="inline-flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold px-8 py-4 rounded-xl transition-colors btn-cta text-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>Call {site.phone}</span>
              </a>
              <a 
                href={`sms:${site.phoneLink}`}
                class="inline-flex items-center justify-center gap-2 bg-white border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-bold px-8 py-4 rounded-xl transition-colors text-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                <span>Text Us</span>
              </a>
            </div>
          </div>

          <!-- Right Column: Image (2/5) -->
          <div class="lg:col-span-2 hidden lg:block">
            <div class="relative">
              <img 
                src={heroImageUrl} 
                alt={heroImageAlt}
                class="rounded-2xl shadow-2xl w-full h-auto"
                width="600"
                height="400"
                loading="eager"
              />
              <!-- Rating Badge Overlay -->
              <div class="absolute bottom-4 left-4 bg-white rounded-xl shadow-lg px-4 py-3 flex items-center gap-3">
                <div class="flex items-center gap-1">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="font-bold text-gray-900">{site.rating}</span>
                </div>
                <div class="text-sm text-gray-500">
                  {site.reviewCount} Reviews
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- ==========================================
         SECTION 2: ABOUT / INTRO
         Establishes expertise and local authority
         ========================================== -->
    <section class="py-16 md:py-20 bg-white">
      <div class="max-w-4xl mx-auto px-5 sm:px-8">
        
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-8">
          {aboutContent.headline}
        </h2>

        <div class="prose prose-lg max-w-none">
          {aboutContent.paragraphs.map((paragraph) => (
            <p class="text-gray-600 mb-6 text-lg leading-relaxed">
              {paragraph}
            </p>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 3: NEIGHBORHOODS GRID
         Links DOWN to /services/[service]-[neighborhood]
         ========================================== -->
    <section class="py-16 md:py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {service.name} Throughout {site.city}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            We provide professional {service.name.toLowerCase()} in every {site.city} neighborhood
          </p>
        </div>

        <!-- Neighborhoods Grid - Links DOWN to Service pages -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          {neighborhoods.map((n) => (
            <a 
              href={`/services/${service.slug}-${n.slug}`}
              class="bg-white rounded-xl p-6 border border-gray-200 text-center hover:shadow-lg hover:border-primary-500 transition-all group"
            >
              <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-3 group-hover:bg-primary-600 transition-colors">
                <svg class="w-5 h-5 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="font-bold text-gray-900 group-hover:text-primary-600 transition-colors block">
                {n.name}
              </span>
              <span class="text-sm text-gray-500 mt-1 block">
                {service.name}
              </span>
            </a>
          ))}
        </div>

        <!-- Additional CTA -->
        <p class="text-center mt-8 text-gray-600">
          Don't see your area? We serve all of {site.city} and {site.serviceArea} surrounding. Call{' '}
          <a href={`tel:${site.phoneLink}`} class="text-primary-600 font-bold hover:underline">
            {site.phone}
          </a>
        </p>

      </div>
    </section>

    <!-- ==========================================
         SECTION 4: PROCESS / METHODOLOGY
         ========================================== -->
    <section class="py-16 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Our {service.name} Process
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            A proven approach that delivers consistent, quality results
          </p>
        </div>

        <!-- Process Steps -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {service.process.map((item, index) => (
            <div class="relative">
              <!-- Step Number -->
              <div class="w-12 h-12 rounded-full bg-primary-600 text-white font-bold text-xl flex items-center justify-center mb-4">
                {index + 1}
              </div>
              
              <h3 class="text-xl font-bold text-gray-900 mb-3">{item.title}</h3>
              <p class="text-gray-600">{item.description}</p>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 5: BENEFITS
         ========================================== -->
    <section class="py-16 md:py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            Benefits of Professional {service.name}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Why {site.city} homeowners trust professionals for {service.name.toLowerCase()}
          </p>
        </div>

        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {service.benefits.map((benefit) => (
            <div class="bg-white rounded-2xl p-6 border border-gray-200 flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-lg font-medium text-gray-900">{benefit}</span>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 6: PRICING FACTORS
         Transparency builds trust
         ========================================== -->
    <section class="py-16 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          
          <!-- Left: Content -->
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
              {service.name} Pricing in {site.city}
            </h2>
            
            <p class="text-lg text-gray-600 mb-8">
              We believe in transparent, honest pricing. While every {service.name.toLowerCase()} project is unique, here are the main factors that affect cost. We always provide a detailed, written estimate before any work begins—no surprises, no hidden fees.
            </p>

            <!-- Pricing Factors -->
            <div class="space-y-4">
              {service.pricingFactors.map((item) => (
                <div class="flex items-start gap-4">
                  <div class="w-8 h-8 rounded-lg bg-primary-100 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900">{item.factor}</h3>
                    <p class="text-gray-600">{item.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Right: CTA Card -->
          <div class="bg-gray-50 rounded-2xl p-8 border border-gray-200">
            <div class="text-center">
              <div class="w-16 h-16 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              
              <h3 class="text-2xl font-bold text-gray-900 mb-4">
                Get Your Free Estimate
              </h3>
              
              <p class="text-gray-600 mb-6">
                Every {service.name.toLowerCase()} quote includes a detailed breakdown of costs. No obligation, no pressure—just honest pricing from {site.city}'s trusted experts.
              </p>

              <a 
                href={`tel:${site.phoneLink}`}
                class="w-full inline-flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold px-8 py-4 rounded-xl transition-colors btn-cta text-lg"
              >
