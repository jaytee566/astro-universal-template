---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import { site, services as siteServices, neighborhoods } from '../config/site';

// ============================================
// STATIC PATHS - Generate Silo Head pages
// Route: /[service-slug]-[city-slug]
// Example: /general-maintenance-austin
// ============================================
export async function getStaticPaths() {
  // Luxury pool & outdoor living services (for linking DOWN into silo)
  const servicesData = [
    {
      slug: 'custom-pool-design',
      name: 'Custom Pool Design',
      description: 'Transform your backyard with award-winning custom pool designs. Our curated approach brings your vision to life with meticulous attention to detail and premium materials.',
      supportArticles: [
