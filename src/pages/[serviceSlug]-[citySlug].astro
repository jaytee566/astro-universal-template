  const servicesData = [
    {
      slug: 'water-extraction',
      name: 'Water Extraction',
      description: 'Emergency water removal using industrial-grade extraction equipment to prevent further damage. Our certified technicians respond within 30 minutes to extract standing water and begin the drying process.',
