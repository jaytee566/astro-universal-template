    },
    {
      slug: 'flood-damage-repair',
      name: 'Flood Damage Repair',
      description: 'Complete flood damage restoration including structural repairs, mold remediation, and property restoration. We handle everything from insurance claims to final reconstruction.',
      supportArticles: [
        { slug: 'complete-guide', title: 'Complete Guide to Flood Damage Repair' },
        { slug: 'cost-factors', title: 'Flood Damage Repair Cost Factors' },
        { slug: 'diy-vs-professional', title: 'DIY vs Professional Flood Repair' },
      ],
      benefits: [
        { text: 'Complete structural repairs', icon: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6' },
        { text: 'Mold prevention and remediation', icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z' },
        { text: 'Insurance claim assistance', icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z' },
        { text: 'Licensed general contractors', icon: 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z' },
        { text: 'Content pack-out and storage', icon: 'M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4' },
        { text: 'Odor removal and sanitization', icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' },
      ],
      process: [
        { step: 'Inspection', title: 'Comprehensive Assessment', description: 'We document all flood damage with photos, moisture readings, and detailed reports for insurance claims.' },
        { step: 'Mitigation', title: 'Water Mitigation', description: 'Remove water, dry structure, and prevent further damage while planning full restoration.' },
        { step: 'Restoration', title: 'Rebuild and Repair', description: 'Replace drywall, flooring, trim, and all damaged materials to restore your property.' },
        { step: 'Verification', title: 'Quality Inspection', description: 'Final inspection ensures all work meets code requirements and industry standards.' },
