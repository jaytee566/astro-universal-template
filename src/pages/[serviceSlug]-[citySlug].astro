---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import { site, services as siteServices, neighborhoods } from '../config/site';

// ============================================
// STATIC PATHS - Generate Silo Head pages
// Route: /[service-slug]-[city-slug]
// Example: /general-maintenance-austin
// ============================================
export async function getStaticPaths() {
  // Services with their support articles (for linking DOWN into silo)
  const servicesData = [
    {
      slug: 'general-maintenance',
      name: 'General Maintenance',
      description: 'Comprehensive maintenance services to keep your property in optimal condition. Our expert team handles all aspects of property maintenance, from routine inspections to preventive care.',
      supportArticles: [
        { slug: 'complete-guide', title: 'Complete Guide to General Maintenance' },
        { slug: 'cost-factors', title: 'General Maintenance Cost Factors' },
        { slug: 'diy-vs-professional', title: 'DIY vs Professional Maintenance' },
