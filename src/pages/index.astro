---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import { site, services, neighborhoods } from '../config/site';

// ============================================
// PAGE METADATA
// ============================================
const pageData = {
  metaTitle: `${site.niche} in ${site.city}, ${site.state} | ${site.businessName}`,
  metaDescription: `Award-winning ${site.nicheLowercase} in ${site.city}, ${site.state}. Curated designs, ${site.rating}-star rated, ${site.yearsInBusiness} years of excellence. Call ${site.phone} to schedule your complimentary consultation.`,
};

// ============================================
// HERO SECTION CONTENT
// ============================================
const heroContent = {
  badge: site.niche,
  headline: `${site.city} Luxury Pool & Outdoor Living`,
  subheadline: `Curated, award-winning ${site.nicheLowercase} in ${site.city}, ${site.state}. Bespoke pool design, premium resurfacing, and stunning outdoor living spaces.`,
  image: 'https://images.unsplash.com/photo-1621905251189-08b45d6a269e?w=600&h=400&fit=crop',
  imageAlt: `Luxury ${site.nicheLowercase} in ${site.city}`,
  trustBadges: ['Licensed & Bonded', 'Award-Winning Design', 'Premium Materials', 'Satisfaction Guaranteed'],
};

// ============================================
// SERVICES GRID SECTION - Links DOWN to Silo Heads
// ============================================
const servicesContent = {
  headline: 'Curated Services',
  subheadline: 'Award-winning design and craftsmanship for discerning clients',
  services: [
    {
      title: 'Custom Pool Design',
      slug: 'custom-pool-design',
      description: 'Transform your backyard with award-winning custom pool designs.',
      icon: 'pool',
    },
    {
      title: 'Pool Resurfacing',
      slug: 'pool-resurfacing',
      description: "Restore your pool's beauty with premium resurfacing solutions.",
      icon: 'resurface',
    },
    {
      title: 'Outdoor Living Spaces',
      slug: 'outdoor-living-spaces',
      description: 'Create stunning outdoor kitchens, patios, and entertainment areas.',
      icon: 'outdoor',
    },
  ],
};

// ============================================
// ABOUT PREVIEW SECTION
// ============================================
const aboutContent = {
  headline: `Award-Winning ${site.city} Design & Build`,
  subheadline: `${site.yearsInBusiness} years of excellence`,
  description: `${site.businessName} has been serving ${site.city}'s finest homes for over ${site.yearsInBusiness} years. Our team delivers curated pool and outdoor living experiences with meticulous attention to detail, premium materials, and a commitment to exceeding expectations.`,
  image: 'https://images.pexels.com/photos/3184293/pexels-photo-3184293.jpeg?w=500&h=400&fit=crop',
  imageAlt: 'Luxury pool and outdoor living design team',
};

// ============================================
// TESTIMONIALS SECTION
// ============================================
const testimonialsContent = {
  headline: 'What Our Clients Say',
  subheadline: 'From discerning homeowners across Austin',
  testimonials: [
    {
      name: 'Sarah Johnson',
      location: 'Downtown Austin',
      rating: 5,
      text: 'From our complimentary consultation to the final reveal, the experience was exceptional. The pool design exceeded our vision.',
    },
    {
      name: 'Michael Chen',
      location: 'North Austin',
      rating: 5,
      text: 'The attention to detail and premium materials made all the difference. Our outdoor living space is now the heart of our home.',
    },
    {
      name: 'Emily Rodriguez',
      location: 'South Austin',
      rating: 5,
      text: 'Professional, elegant, and delivered on every promise. The resurfacing transformed our poolâ€”we could not be more pleased.',
    },
  ],
};

// ============================================
// SERVICE AREAS SECTION
// ============================================
const serviceAreasContent = {
  headline: 'Service Areas',
  subheadline: `Serving ${site.city} and surrounding communities`,
  description: `We proudly serve the entire ${site.serviceArea}, including all major neighborhoods and surrounding communities. Our local presence means faster response times and personalized service from professionals who know your area.`,
  areas: [
    'Downtown Austin',
    'North Austin',
    'South Austin',
    'East Austin',
    'West Austin',
    'Round Rock',
    'Pflugerville',
    'Cedar Park',
  ],
};


// ============================================
// NEIGHBORHOODS SECTION - Links to neighborhood info pages
// ============================================
const neighborhoodsContent = {
  headline: 'Areas We Serve',
  subheadline: `Proudly serving ${site.city} and surrounding neighborhoods`,
  areas: neighborhoods,
};


// ============================================
// FAQ SECTION
// ============================================
const faqContent = {
  headline: 'Frequently Asked Questions',
  questions: [
    { 
      q: 'Do you offer complimentary consultations?', 
      a: `Yes, we provide complimentary, no-obligation consultations for all ${site.nicheLowercase} services to understand your goals and tailor a solution.` 
    },
    { 
      q: 'Are you licensed and insured?', 
      a: `Yes, we are fully licensed and insured in ${site.state}.` 
    },
    { 
      q: 'What areas do you serve?', 
      a: `We serve ${site.city} and all surrounding neighborhoods within ${site.serviceArea}.` 
    },
    { 
      q: 'How do I schedule a consultation?', 
      a: 'Schedule your complimentary consultation by calling us or completing our contact form.' 
    },
    { 
      q: 'Do you offer warranties?', 
      a: 'Yes, all our work is backed by our satisfaction guarantee and warranty.' 
    },
  ],
};


// ============================================
// FINAL CTA SECTION
// ============================================
const ctaContent = {
  headline: 'Ready to Begin?',
  subheadline: `Schedule your complimentary consultation to discuss a curated plan for your property.`,
};
---

<Layout title={pageData.metaTitle} description={pageData.metaDescription}>
  <div class="bg-[color:var(--color-surface)] text-gray-700">
    <Header hideMainBar={true} />

    <!-- ==========================================
         SECTION 1: HERO - PREMIUM LUXURY
         ========================================== -->
    <section class="hero-section hero-section-blue pt-4 pb-6 sm:pt-6 sm:pb-8 md:py-12">
      <div class="max-w-6xl mx-auto px-4 sm:px-5 lg:px-8">
        <div class="grid lg:grid-cols-5 gap-8 lg:gap-12 items-center">

          <!-- Left Column: Content -->
          <div class="lg:col-span-3 min-w-0">

            <!-- Headline -->
            <h1 class="hero-heading text-4xl sm:text-5xl lg:text-6xl font-bold mb-3 sm:mb-4 leading-tight text-white">
              Luxury Pool & Outdoor Living for {site.city}'s Finest Homes
            </h1>

            <!-- Subhead -->
            <p class="hero-subheading text-sm sm:text-base md:text-lg mb-4 sm:mb-6 max-w-2xl text-white">
              Curated pool design, premium resurfacing, and stunning outdoor living spaces. Our award-winning team delivers bespoke experiences with meticulous attention to detail.
            </p>

            <!-- Trust badges - one column so they fit on mobile -->
            <div class="mb-4 sm:mb-6 flex flex-col gap-2 text-xs sm:text-sm">
              <span class="text-white font-semibold">Trusted by Austin's finest homes</span>
              <div class="flex flex-wrap gap-2">
                <span class="inline-flex items-center rounded-full bg-white/20 px-3 py-1 text-white font-semibold">BBB A+ Rated</span>
                <span class="inline-flex items-center rounded-full bg-white/20 px-3 py-1 text-white font-semibold">Houzz Best of 2024</span>
                <span class="inline-flex items-center rounded-full bg-white/20 px-3 py-1 text-white font-semibold">10+ Years Experience</span>
              </div>
            </div>

            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
              <a
                href={`tel:${site.phoneLink}`}
                class="w-full sm:flex-1 inline-flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-semibold px-4 py-3 sm:px-6 sm:py-4 rounded-xl transition-colors shadow-lg hover:shadow-xl text-sm sm:text-base md:text-lg btn-cta"
              >
                <svg class="w-5 h-5 sm:w-6 sm:h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="whitespace-nowrap">Schedule Your Consultation</span>
              </a>

              <a
                href="/about"
                class="w-full sm:w-auto inline-flex items-center justify-center gap-2 bg-transparent border-2 border-white/80 text-white hover:bg-white hover:text-primary-700 font-semibold px-4 py-3 sm:px-6 sm:py-4 rounded-xl transition-colors text-sm sm:text-base md:text-lg"
              >
                <svg class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="whitespace-nowrap">View Our Portfolio</span>
              </a>
            </div>

            <!-- Phone Number Text Link (visible on mobile) -->
            <p class="mt-3 sm:mt-4 text-center sm:text-left text-xs sm:text-sm text-white/80 md:hidden">
              Prefer to talk through options? Call us at{' '}
              <a href={`tel:${site.phoneLink}`} class="font-bold text-white underline">{site.phone}</a>
            </p>

          </div>

          <!-- Right Column: Image (2/5) - Desktop Only -->
          <div class="lg:col-span-2 hidden lg:block">
            <div class="relative">
              <img
                src={heroContent.image}
                alt={heroContent.imageAlt}
                class="rounded-2xl shadow-2xl w-full h-auto"
                width="600"
                height="400"
                loading="eager"
              />
              <!-- Rating Badge Overlay -->
              <div class="absolute bottom-4 left-4 bg-white rounded-xl shadow-lg px-4 py-3 flex items-center gap-3">
                <div class="flex items-center gap-1">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="font-bold text-gray-900">{site.rating}</span>
                </div>
                <div class="text-sm text-gray-500">
                  {site.reviewCount} Reviews
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- ==========================================
         SECTION 2: SERVICES GRID
         ========================================== -->
    <section class="py-10 md:py-16 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-8">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {servicesContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {servicesContent.subheadline}
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-3 gap-6">
          {servicesContent.services.map((service) => (
            <a
              href={`/${service.slug}-${site.citySlug}`}
              class="bg-white rounded-2xl p-6 border-2 border-gray-200 hover:shadow-xl hover:border-primary-600 transition-all group"
            >
              <!-- Icon + Title Row -->
              <div class="flex items-start gap-4 mb-3">
                <div class="w-8 h-8 rounded-lg bg-primary-100 flex items-center justify-center flex-shrink-0 group-hover:bg-primary-600 transition-colors">
                  {service.icon === 'pool' && (
                    <svg class="w-4 h-4 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2.69l5.66 5.66a8 8 0 11-11.31 0L12 2.69z" />
                    </svg>
                  )}
                  {service.icon === 'resurface' && (
                    <svg class="w-4 h-4 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                  )}
                  {service.icon === 'outdoor' && (
                    <svg class="w-4 h-4 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  )}
                </div>
                <h3 class="text-xl font-bold text-gray-900 pt-1 group-hover:text-primary-600 transition-colors">
                  {service.title}
                </h3>
              </div>
              <p class="text-gray-600 mb-3">{service.description}</p>
              <span class="text-primary-600 font-semibold inline-flex items-center gap-2">
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 3: ABOUT PREVIEW
         ========================================== -->
    <section class="py-16 md:py-24 bg-[color:var(--color-surface)]">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <div class="grid lg:grid-cols-2 gap-12 items-center">

          <!-- Left Column: Image -->
          <div>
            <img
              src={aboutContent.image}
              alt={aboutContent.imageAlt}
              class="rounded-2xl shadow-xl w-full h-auto"
              width="500"
              height="400"
              loading="lazy"
            />
          </div>

          <!-- Right Column: Content -->
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
              {aboutContent.headline}
            </h2>
            <p class="text-xl text-primary-600 font-semibold mb-6">
              {aboutContent.subheadline}
            </p>
            <p class="text-gray-600 text-lg leading-relaxed mb-6">
              {aboutContent.description}
            </p>
            <a
              href="/about"
              class="inline-flex items-center gap-2 text-primary-600 font-bold hover:text-primary-700 transition-colors"
            >
              Learn More About Us
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 4: NEIGHBORHOODS GRID
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {neighborhoodsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {neighborhoodsContent.subheadline}
          </p>
        </div>

        <!-- Neighborhoods Grid -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          {neighborhoodsContent.areas.map((area) => (
            <a
              href={`/neighborhoods/${area.slug}`}
              class="bg-white rounded-xl p-6 border border-gray-200 text-center hover:shadow-lg hover:border-primary-600 transition-all group"
            >
              <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-3 group-hover:bg-primary-600 transition-colors">
                <svg class="w-5 h-5 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                {area.name}
              </span>
            </a>
          ))}
        </div>

        <!-- Don't See Your Area -->
        <div class="text-center mt-8">
          <a
            href={`tel:${site.phoneLink}`}
            class="inline-flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold px-6 py-3 rounded-xl transition-colors no-underline"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Don't see your area? Call us at {site.phone}
          </a>
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 5: TESTIMONIALS
         ========================================== -->
    <section class="py-16 md:py-24 bg-[color:var(--color-surface)]">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {testimonialsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {testimonialsContent.subheadline}
          </p>
        </div>

        <!-- Testimonials Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {testimonialsContent.testimonials.map((testimonial) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg">
              <!-- Rating Stars -->
              <div class="flex gap-1 mb-4">
                {Array.from({ length: testimonial.rating }).map(() => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <!-- Review Text -->
              <p class="text-gray-600 mb-6 leading-relaxed">"{testimonial.text}"</p>
              <!-- Author -->
              <div class="border-t border-gray-200 pt-4">
                <p class="font-bold text-gray-900">{testimonial.name}</p>
                <p class="text-sm text-gray-500">{testimonial.location}</p>
              </div>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 6: SERVICE AREAS MAP
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {serviceAreasContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
            {serviceAreasContent.subheadline}
          </p>
          <p class="text-gray-600 max-w-3xl mx-auto leading-relaxed">
            {serviceAreasContent.description}
          </p>
        </div>

        <!-- Service Areas Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
          {serviceAreasContent.areas.map((area) => (
            <div class="flex items-center gap-2 text-gray-700">
              <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium">{area}</span>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 7: FAQ
         ========================================== -->
    <section class="py-16 md:py-24 bg-[color:var(--color-surface)]">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {faqContent.headline}
          </h2>
        </div>

        <!-- FAQ Accordion -->
        <div class="max-w-3xl mx-auto">
          {faqContent.questions.map((faq, index) => (
            <details class="group border-b border-gray-200" open={index === 0}>
              <summary class="flex items-center justify-between py-6 cursor-pointer">
                <span class="font-bold text-gray-900 text-lg pr-4">{faq.q}</span>
                <svg class="w-5 h-5 text-gray-500 flex-shrink-0 chevron-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-gray-600 pb-6 pr-8">
                {faq.a}
              </p>
            </details>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 8: FINAL CTA
         ========================================== -->
    <section class="py-16 md:py-24 bg-primary-900">
      <div class="max-w-4xl mx-auto px-5 sm:px-8 text-center">
        
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          {ctaContent.headline}
        </h2>
        <p class="text-xl text-gray-200 mb-8">
          {ctaContent.subheadline}
        </p>

        <!-- Large Phone Button -->
        <a 
          href={`tel:${site.phoneLink}`}
          class="inline-flex items-center gap-3 bg-accent-600 hover:bg-accent-700 text-white font-bold text-2xl px-10 py-6 rounded-2xl transition-colors btn-cta"
