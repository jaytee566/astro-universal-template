---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import { site, services, neighborhoods } from '../config/site';

// ============================================
// PAGE METADATA
// ============================================
const pageData = {
  metaTitle: `${site.niche} Services in ${site.city}, ${site.state} | ${site.businessName}`,
  metaDescription: `Professional ${site.nicheLowercase} services in ${site.city}, ${site.state}. Licensed experts, ${site.rating}-star rated, ${site.yearsInBusiness} years experience. Call ${site.phone} for a free estimate.`,
};

// ============================================
// HERO SECTION CONTENT
// ============================================
const heroContent = {
  badge: `Professional ${site.niche}`,
  headline: `${site.city} Home Services`,
  subheadline: `Professional ${site.nicheLowercase} in ${site.city}, ${site.state}. Licensed experts ready to help with all your home service needs.`,
  image: 'https://images.unsplash.com/photo-1621905251189-08b45d6a269e?w=600&h=400&fit=crop',
  imageAlt: `Professional ${site.nicheLowercase} services in ${site.city}`,
  trustBadges: ['Licensed & Insured', 'Satisfaction Guaranteed', 'Free Estimates'],
};

// ============================================
// SERVICES GRID SECTION - Links DOWN to Silo Heads
// ============================================
const servicesContent = {
  headline: 'Our Services',
  subheadline: 'Professional solutions for all your home service needs',
  services: [
    {
      title: 'General Maintenance',
      slug: 'general-maintenance',
      description: 'Keep your property in top condition with regular maintenance and repairs.',
      icon: 'tools',
    },
    {
      title: 'Appliance Repair',
      slug: 'appliance-repair',
      description: 'Expert appliance repair services for all major brands and models.',
      icon: 'cog',
    },
    {
      title: 'Emergency Services',
      slug: 'emergency-services',
      description: '24/7 emergency response for urgent repairs when you need help fast.',
      icon: 'lightning',
    },
  ],
};

// ============================================
// ABOUT PREVIEW SECTION
// ============================================
const aboutContent = {
  headline: `Trusted ${site.city} Professionals`,
  subheadline: `${site.yearsInBusiness} years of quality service`,
  description: `${site.businessName} has been serving ${site.city} for over ${site.yearsInBusiness} years. Our team of licensed professionals is committed to delivering exceptional service with a focus on quality, reliability, and customer satisfaction. We're proud to be your trusted local experts.`,
  image: 'https://images.pexels.com/photos/4792479/pexels-photo-4792479.jpeg?w=500&h=400&fit=crop',
  imageAlt: 'Home services technician working in a modern home',
};

// ============================================
// TESTIMONIALS SECTION
// ============================================
const testimonialsContent = {
  headline: 'What Our Customers Say',
  subheadline: 'Real reviews from real customers',
  testimonials: [
    {
      name: 'Sarah Johnson',
      location: 'Downtown Austin',
      rating: 5,
      text: 'Excellent service from start to finish. The team was professional, punctual, and did outstanding work. Highly recommend!',
    },
    {
      name: 'Michael Chen',
      location: 'North Austin',
      rating: 5,
      text: 'Very impressed with the quality of work and attention to detail. They exceeded my expectations and stayed within budget.',
    },
    {
      name: 'Emily Rodriguez',
      location: 'South Austin',
      rating: 5,
      text: 'Fast, reliable, and affordable. The technician was knowledgeable and took time to explain everything. Will definitely use again!',
    },
  ],
};

// ============================================
// SERVICE AREAS SECTION
// ============================================
const serviceAreasContent = {
  headline: 'Service Areas',
  subheadline: `Serving ${site.city} and surrounding communities`,
  description: `We proudly serve the entire ${site.serviceArea}, including all major neighborhoods and surrounding communities. Our local presence means faster response times and personalized service from professionals who know your area.`,
  areas: [
    'Downtown Austin',
    'North Austin',
    'South Austin',
    'East Austin',
    'West Austin',
    'Round Rock',
    'Pflugerville',
    'Cedar Park',
  ],
};


// ============================================
// NEIGHBORHOODS SECTION - Links to neighborhood info pages
// ============================================
const neighborhoodsContent = {
  headline: 'Areas We Serve',
  subheadline: `Proudly serving ${site.city} and surrounding neighborhoods`,
  areas: neighborhoods,
};


// ============================================
// FAQ SECTION
// ============================================
const faqContent = {
  headline: 'Frequently Asked Questions',
  questions: [
    { 
      q: 'Do you offer free estimates?', 
      a: `Yes, we provide free, no-obligation estimates for all ${site.nicheLowercase} services.` 
    },
    { 
      q: 'Are you licensed and insured?', 
      a: `Yes, we are fully licensed and insured in ${site.state}.` 
    },
    { 
      q: 'What areas do you serve?', 
      a: `We serve ${site.city} and all surrounding neighborhoods within ${site.serviceArea}.` 
    },
    { 
      q: 'How do I schedule service?', 
      a: 'Call us or fill out the contact form to schedule a convenient time.' 
    },
    { 
      q: 'Do you offer warranties?', 
      a: 'Yes, all our work is backed by our satisfaction guarantee and warranty.' 
    },
  ],
};


// ============================================
// FINAL CTA SECTION
// ============================================
const ctaContent = {
  headline: 'Ready to Get Started?',
  subheadline: `Contact us today for professional ${site.nicheLowercase} you can trust.`,
};
---

<Layout title={pageData.metaTitle} description={pageData.metaDescription}>
  <div class="bg-white text-gray-700">
    <Header />

    <!-- ==========================================
         SECTION 1: HERO - MOBILE-FIRST CONVERSION FOCUS
         ========================================== -->
    <section class="hero-section pt-6 pb-8 md:py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-5 lg:px-8">
        <div class="grid lg:grid-cols-5 gap-12 items-center">

          <!-- Left Column: Content - Mobile-First Order (3/5) -->
          <div class="lg:col-span-3">

            <!-- 1. Trust Badges FIRST - Small Pills -->
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="inline-flex items-center gap-1.5 bg-green-100 text-green-700 text-xs font-semibold px-3 py-1.5 rounded-full">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
                Licensed & Insured
              </span>
              <span class="inline-flex items-center gap-1.5 bg-blue-100 text-blue-700 text-xs font-semibold px-3 py-1.5 rounded-full">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Free Estimates
              </span>
            </div>

            <!-- 2. H1 Headline - match global H1 scale -->
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold hero-heading mb-6 leading-tight">
              Professional Home Services in {site.city}
            </h1>

            <!-- 3. Short Subhead - 1-2 sentences, slate-500 color -->
            <p class="text-base sm:text-lg text-slate-600 mb-5 max-w-2xl">
              Licensed experts ready to help with maintenance, repairs, and emergency services. Available 24/7 for urgent needs.
            </p>

            <!-- 4. Trust Stats Row - Icons + Numbers -->
            <div class="flex flex-nowrap items-center justify-between gap-2 sm:gap-6 mb-6 text-xs sm:text-sm font-medium text-gray-700">
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4 text-yellow-500 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="font-semibold whitespace-nowrap">{site.rating} Rating</span>
              </div>
              <span class="hidden sm:inline text-gray-400">•</span>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4 text-blue-600 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                <span class="font-semibold whitespace-nowrap">2,000+ Homes</span>
              </div>
              <span class="hidden sm:inline text-gray-400">•</span>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4 text-green-600 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="font-semibold whitespace-nowrap">{site.yearsInBusiness} Years</span>
              </div>
            </div>

            <!-- 5. ONE Primary CTA - Full width on mobile, 56px tall, orange -->
            <div class="flex flex-col sm:flex-row gap-3">
              <a
                href={`tel:${site.phoneLink}`}
                class="w-full sm:flex-1 inline-flex items-center justify-center gap-2.5 bg-orange-600 hover:bg-orange-700 active:bg-orange-800 text-white font-bold px-8 py-4 rounded-xl transition-colors shadow-lg hover:shadow-xl text-lg"
              >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>Tap to Call - Free Estimate</span>
              </a>

              <!-- Desktop: Secondary CTA (hidden on mobile for focus) -->
              <a
                href="/contact"
                class="hidden sm:inline-flex items-center justify-center gap-2 bg-white border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-bold px-8 py-4 rounded-xl transition-colors text-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>Schedule Online</span>
              </a>
            </div>

          </div>

          <!-- Right Column: Image (2/5) - Desktop Only -->
          <div class="lg:col-span-2 hidden lg:block">
            <div class="relative">
              <img
                src={heroContent.image}
                alt={heroContent.imageAlt}
                class="rounded-2xl shadow-2xl w-full h-auto"
                width="600"
                height="400"
                loading="eager"
              />
              <!-- Rating Badge Overlay -->
              <div class="absolute bottom-4 left-4 bg-white rounded-xl shadow-lg px-4 py-3 flex items-center gap-3">
                <div class="flex items-center gap-1">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="font-bold text-gray-900">{site.rating}</span>
                </div>
                <div class="text-sm text-gray-500">
                  {site.reviewCount} Reviews
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- ==========================================
         SECTION 2: SERVICES GRID
         ========================================== -->
    <section class="pt-6 pb-12 md:py-16 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {servicesContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {servicesContent.subheadline}
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {servicesContent.services.map((service) => (
            <a
              href={`/${service.slug}-${site.citySlug}`}
              class="bg-white rounded-2xl p-8 border-2 border-gray-200 hover:shadow-xl hover:border-primary-600 transition-all group"
            >
              <!-- Icon + Title Row -->
              <div class="flex items-center gap-4 mb-4">
                <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center group-hover:bg-primary-600 transition-colors">
                  {service.icon === 'tools' && (
                    <svg class="w-6 h-6 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                    </svg>
                  )}
                  {service.icon === 'lightning' && (
                    <svg class="w-6 h-6 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  )}
                  {service.icon === 'cog' && (
                    <svg class="w-6 h-6 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  )}
                </div>
                <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                  {service.title}
                </h3>
              </div>

              <p class="text-gray-600 mb-4">{service.description}</p>
              <span class="text-primary-600 font-semibold inline-flex items-center gap-2">
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 3: ABOUT PREVIEW
         ========================================== -->
    <section class="py-12 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <div class="grid lg:grid-cols-2 gap-12 items-center">

          <!-- Left Column: Image -->
          <div>
            <img
              src={aboutContent.image}
              alt={aboutContent.imageAlt}
              class="rounded-2xl shadow-xl drop-shadow-lg w-full h-auto"
              width="500"
              height="400"
              loading="lazy"
            />
          </div>

          <!-- Right Column: Content -->
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
              {aboutContent.headline}
            </h2>
            <p class="text-xl text-primary-600 font-semibold mb-6">
              {aboutContent.subheadline}
            </p>
            <p class="text-gray-600 text-lg leading-relaxed mb-6">
              {aboutContent.description}
            </p>
            <a
              href="/about"
              class="inline-flex items-center gap-2 text-primary-600 font-bold hover:text-primary-700 transition-colors"
            >
              Learn More About Us
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 4: NEIGHBORHOODS GRID
         ========================================== -->
    <section class="py-12 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {neighborhoodsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {neighborhoodsContent.subheadline}
          </p>
        </div>

        <!-- Neighborhoods Grid -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          {neighborhoodsContent.areas.map((area) => (
            <a
              href={`/neighborhoods/${area.slug}`}
              class="bg-white rounded-xl p-6 border border-gray-200 text-center hover:shadow-lg hover:border-primary-600 transition-all group"
            >
              <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-3 group-hover:bg-primary-600 transition-colors">
                <svg class="w-5 h-5 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                {area.name}
              </span>
            </a>
          ))}
        </div>

        <!-- Don't See Your Area -->
        <div class="mt-8 flex justify-center">
          <a
            href={`tel:${site.phoneLink}`}
            class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-primary-600 text-white font-bold no-underline shadow-md hover:bg-primary-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              />
            </svg>
            <span>Don't see your area? Call us at {site.phone}</span>
          </a>
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 5: TESTIMONIALS
         ========================================== -->
    <section class="py-12 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {testimonialsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {testimonialsContent.subheadline}
          </p>
        </div>

        <!-- Testimonials Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {testimonialsContent.testimonials.map((testimonial) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg">
              <!-- Rating Stars -->
              <div class="flex gap-1 mb-4">
                {Array.from({ length: testimonial.rating }).map(() => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <!-- Review Text -->
              <p class="text-gray-600 mb-6 leading-relaxed">"{testimonial.text}"</p>
              <!-- Author -->
              <div class="border-t border-gray-200 pt-4">
                <p class="font-bold text-gray-900">{testimonial.name}</p>
                <p class="text-sm text-gray-500">{testimonial.location}</p>
              </div>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 6: SERVICE AREAS MAP
         ========================================== -->
    <section class="py-12 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {serviceAreasContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
            {serviceAreasContent.subheadline}
          </p>
          <p class="text-gray-600 max-w-3xl mx-auto leading-relaxed">
            {serviceAreasContent.description}
          </p>
        </div>

        <!-- Service Areas Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
          {serviceAreasContent.areas.map((area) => (
            <div class="flex items-center gap-2 text-gray-700">
              <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium">{area}</span>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 7: FAQ
         ========================================== -->
    <section class="py-12 md:py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-10">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {faqContent.headline}
          </h2>
        </div>

        <!-- FAQ Accordion -->
        <div class="max-w-3xl mx-auto">
          {faqContent.questions.map((faq, index) => (
            <details class="group border-b border-gray-200" open={index === 0}>
              <summary class="flex items-center justify-between py-5 cursor-pointer">
                <span class="font-bold text-gray-900 text-lg pr-4">{faq.q}</span>
                <svg class="w-5 h-5 text-gray-400 flex-shrink-0 chevron-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-gray-700 pb-5 pr-8">
                {faq.a}
              </p>
            </details>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 8: FINAL CTA
         ========================================== -->
    <section class="py-12 md:py-20 bg-gray-900">
      <div class="max-w-4xl mx-auto px-5 sm:px-8 text-center">
        
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          {ctaContent.headline}
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          {ctaContent.subheadline}
        </p>

        <!-- Large Phone Button -->
        <a 
          href={`tel:${site.phoneLink}`}
          class="inline-flex items-center gap-3 bg-accent-600 hover:bg-accent-700 text-white font-bold text-2xl px-10 py-6 rounded-2xl transition-colors btn-cta"
        >
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>{site.phone}</span>
        </a>

        <!-- Trust Badges -->
        <div class="flex flex-wrap justify-center gap-6 mt-8 text-gray-400">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Licensed & Insured</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{site.rating}-Star Rated</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{site.yearsInBusiness} Years Experience</span>
          </div>
        </div>

      </div>
    </section>

    <!-- Footer -->
    <Footer neighborhoods={neighborhoods} />
    
    <!-- Mobile Sticky CTA -->
    <StickyMobileCTA />

  </div>
</Layout>
