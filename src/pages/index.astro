---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import { site, services, neighborhoods } from '../config/site';

// ============================================
// PAGE METADATA
// ============================================
const pageData = {
  metaTitle: `${site.niche} Services in ${site.city}, ${site.state} | ${site.businessName}`,
  metaDescription: `Professional, certified ${site.nicheLowercase} in ${site.city}, ${site.state}. Licensed experts, ${site.rating}-star rated, ${site.yearsInBusiness} years experience. Call ${site.phone} to schedule a free assessment.`,
};

// ============================================
// HERO SECTION CONTENT
// ============================================
const heroContent = {
  badge: `Certified ${site.niche}`,
  headline: `Professional ${site.niche} in ${site.city}`,
  subheadline: `Certified, compliant ${site.nicheLowercase} in ${site.city}, ${site.state}. We follow strict inspection, testing, and verification protocols for every project.`,
  trustBadges: ['EPA Certified', 'State Licensed', 'OSHA Compliant', 'Fully Insured'],
};

// ============================================
// SERVICES GRID SECTION - Links DOWN to Silo Heads
// ============================================
const servicesContent = {
  headline: 'Our Services',
  subheadline: 'Professional solutions for all your home service needs',
  services: [
    {
      title: 'General Maintenance',
      slug: 'general-maintenance',
      description: 'Keep your property in top condition with regular maintenance and repairs.',
      icon: 'tools',
    },
    {
      title: 'Appliance Repair',
      slug: 'appliance-repair',
      description: 'Expert appliance repair services for all major brands and models.',
      icon: 'cog',
    },
    {
      title: 'Emergency Services',
      slug: 'emergency-services',
      description: '24/7 emergency response for urgent repairs when you need help fast.',
      icon: 'lightning',
    },
  ],
};

// ============================================
// ABOUT PREVIEW SECTION
// ============================================
const aboutContent = {
  headline: `Trusted ${site.city} Professionals`,
  subheadline: `${site.yearsInBusiness} years of quality service`,
  description: `${site.businessName} has been serving ${site.city} for over ${site.yearsInBusiness} years. Our team of licensed professionals is committed to delivering exceptional service with a focus on quality, reliability, and customer satisfaction. We're proud to be your trusted local experts.`,
  image: 'https://images.pexels.com/photos/1266025/pexels-photo-1266025.jpeg?w=500&h=400&fit=crop',
  imageAlt: 'Professional team at work',
};

// ============================================
// TESTIMONIALS SECTION
// ============================================
const testimonialsContent = {
  headline: 'What Our Customers Say',
  subheadline: 'Real reviews from real customers',
  testimonials: [
    {
      name: 'Sarah Johnson',
      location: 'Downtown Austin',
      rating: 5,
      text: 'Excellent service from start to finish. The team was professional, punctual, and did outstanding work. Highly recommend!',
    },
    {
      name: 'Michael Chen',
      location: 'North Austin',
      rating: 5,
      text: 'Very impressed with the quality of work and attention to detail. They exceeded my expectations and stayed within budget.',
    },
    {
      name: 'Emily Rodriguez',
      location: 'South Austin',
      rating: 5,
      text: 'Fast, reliable, and affordable. The technician was knowledgeable and took time to explain everything. Will definitely use again!',
    },
  ],
};

// ============================================
// SERVICE AREAS SECTION
// ============================================
const serviceAreasContent = {
  headline: 'Service Areas',
  subheadline: `Serving ${site.city} and surrounding communities`,
  description: `We proudly serve the entire ${site.serviceArea}, including all major neighborhoods and surrounding communities. Our local presence means faster response times and personalized service from professionals who know your area.`,
  areas: [
    'Downtown Austin',
    'North Austin',
    'South Austin',
    'East Austin',
    'West Austin',
    'Round Rock',
    'Pflugerville',
    'Cedar Park',
  ],
};


// ============================================
// NEIGHBORHOODS SECTION - Links to neighborhood info pages
// ============================================
const neighborhoodsContent = {
  headline: 'Areas We Serve',
  subheadline: `Proudly serving ${site.city} and surrounding neighborhoods`,
  areas: neighborhoods,
};


// ============================================
// FAQ SECTION
// ============================================
const faqContent = {
  headline: 'Frequently Asked Questions',
  questions: [
    { 
      q: 'Do you offer free assessments?', 
      a: `Yes, we provide free, no-obligation assessments for all ${site.nicheLowercase} services to determine the appropriate certified scope of work.` 
    },
    { 
      q: 'Are you licensed and insured?', 
      a: `Yes, we are fully licensed and insured in ${site.state}.` 
    },
    { 
      q: 'What areas do you serve?', 
      a: `We serve ${site.city} and all surrounding neighborhoods within ${site.serviceArea}.` 
    },
    { 
      q: 'How do I schedule service?', 
      a: 'Call us or fill out the contact form to schedule a convenient time.' 
    },
    { 
      q: 'Do you offer warranties?', 
      a: 'Yes, all our work is backed by our satisfaction guarantee and warranty.' 
    },
  ],
};


// ============================================
// FINAL CTA SECTION
// ============================================
const ctaContent = {
  headline: 'Ready to Get Started?',
  subheadline: `Contact us today to schedule a professional assessment and safety-focused plan for your property.`,
};
---

<Layout title={pageData.metaTitle} description={pageData.metaDescription}>
  <div class="bg-[color:var(--color-surface)] text-gray-700">
    <Header />

    <!-- ==========================================
         SECTION 1: HERO - TECHNICAL / CERTIFIED
         ========================================== -->
    <section class="hero-section pt-8 pb-10 md:py-24">
      <div class="max-w-6xl mx-auto px-4 sm:px-5 lg:px-8">
        <div class="grid lg:grid-cols-5 gap-10 lg:gap-12 items-start">

          <!-- Left Column: Content -->
          <div class="lg:col-span-3">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 bg-primary-50 text-primary-700 text-xs font-semibold px-4 py-1.5 rounded-full mb-4">
              <span>Certified Technical Services</span>
            </div>

            <!-- H1 -->
            <h1 class="hero-heading text-3xl sm:text-4xl lg:text-5xl font-bold mb-4 leading-tight">
              Professional {site.niche} in {site.city}
            </h1>

            <!-- Subhead -->
            <p class="hero-subheading text-base sm:text-lg mb-6 max-w-2xl">
              Our licensed, EPA-certified specialists follow strict inspection, testing, and verification protocols to keep your property safe and compliant.
            </p>

            <!-- Primary CTA + Phone -->
            <div class="flex flex-wrap items-center justify-center md:justify-start gap-3 mb-5">
              <a
                href={`tel:${site.phoneLink}`}
                class="inline-flex items-center justify-center gap-2.5 bg-accent-600 hover:bg-accent-700 text-white font-semibold px-7 py-3.5 rounded-xl transition-colors shadow-lg hover:shadow-xl text-base sm:text-lg btn-cta"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>Schedule Assessment</span>
              </a>

              <div class="hidden md:flex items-center gap-2 text-sm sm:text-base text-slate-700">
                <span>or call</span>
                <a href={`tel:${site.phoneLink}`} class="phone-link font-semibold flex items-center gap-1">
                  <span aria-hidden="true">ðŸ“ž</span>
                  <span>{site.phone}</span>
                </a>
              </div>
            </div>

            <!-- Compliance badges row -->
            <div class="mt-2">
              <div class="flex flex-wrap items-center gap-3 text-xs sm:text-sm text-slate-600">
                <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1">
                  <span class="inline-flex items-center justify-center w-4 h-4 rounded-full bg-emerald-500">
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                    </svg>
                  </span>
                  <span>EPA Certified</span>
                </span>
                <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1">
                  <span class="inline-flex items-center justify-center w-4 h-4 rounded-full bg-emerald-500">
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                    </svg>
                  </span>
                  <span>State Licensed</span>
                </span>
                <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1">
                  <span class="inline-flex items-center justify-center w-4 h-4 rounded-full bg-emerald-500">
                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                    </svg>
                  </span>
                  <span>$2M Insured</span>
                </span>
              </div>
            </div>
          </div>

          <!-- Right Column: Process Box -->
          <div class="lg:col-span-2">
            <div class="bg-slate-900 text-slate-50 rounded-2xl p-6 sm:p-8 shadow-2xl">
              <h2 class="text-xl sm:text-xl md:text-2xl font-semibold mb-4">Our Process</h2>
              <p class="text-sm text-slate-300 mb-6">
                A documented, step-by-step workflow for every technical project.
              </p>

              <div class="space-y-4">
                {[
                  { title: 'Inspection', desc: 'Comprehensive on-site assessment of systems and risk areas.' },
                  { title: 'Testing', desc: 'Lab-certified sampling and instrument-based diagnostics.' },
                  { title: 'Service', desc: 'Professional remediation, repair, or installation to spec.' },
                  { title: 'Verification', desc: 'Final testing, reporting, and compliance documentation.' },
                ].map((step, index) => (
                  <div class="flex gap-3">
                    <div class="flex-shrink-0">
                      <div class="w-7 h-7 rounded-full bg-emerald-500 flex items-center justify-center text-xs font-bold">
                        {index + 1}
                      </div>
                    </div>
                    <div>
                      <div class="text-sm font-semibold text-white">{step.title}</div>
                      <div class="text-xs sm:text-sm text-slate-300">
                        {step.desc}
                      </div>
                    </div>
                  </div>
                ))}
              </div>

              <p class="mt-6 text-xs text-slate-400 italic">
                All work performed in accordance with applicable codes and safety standards. License #AB-12345.
              </p>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- ==========================================
         SECTION 2: SERVICES GRID
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {servicesContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {servicesContent.subheadline}
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {servicesContent.services.map((service) => (
            <a
              href={`/${service.slug}-${site.citySlug}`}
              class="bg-white rounded-2xl p-8 border-2 border-gray-200 hover:shadow-xl hover:border-primary-600 transition-all group"
            >
              <!-- Icon + Title Row -->
              <div class="flex items-start gap-4 mb-4">
                <div class="w-8 h-8 rounded-lg bg-primary-100 flex items-center justify-center flex-shrink-0 group-hover:bg-primary-600 transition-colors">
                  {service.icon === 'tools' && (
                    <svg class="w-4 h-4 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                    </svg>
                  )}
                  {service.icon === 'lightning' && (
                    <svg class="w-4 h-4 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  )}
                  {service.icon === 'cog' && (
                    <svg class="w-4 h-4 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  )}
                </div>
                <h3 class="text-xl font-bold text-gray-900 pt-0.5 group-hover:text-primary-600 transition-colors">
                  {service.title}
                </h3>
              </div>
              <p class="text-gray-600 mb-4">{service.description}</p>
              <span class="text-primary-600 font-semibold inline-flex items-center gap-2">
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 3: ABOUT PREVIEW
         ========================================== -->
    <section class="py-16 md:py-24 bg-[color:var(--color-surface)]">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <div class="grid lg:grid-cols-2 gap-12 items-center">

          <!-- Left Column: Image -->
          <div>
            <img
              src="https://images.unsplash.com/photo-1621905251189-08b45d6a269e?w=500&h=400&fit=crop&q=80"
              alt="HVAC repair technician working on air conditioning unit"
              class="rounded-2xl shadow-xl w-full h-auto drop-shadow-lg"
              width="500"
              height="400"
              loading="lazy"
            />
          </div>

          <!-- Right Column: Content -->
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
              {aboutContent.headline}
            </h2>
            <p class="text-xl text-primary-600 font-semibold mb-6">
              {aboutContent.subheadline}
            </p>
            <p class="text-gray-600 text-lg leading-relaxed mb-6">
              {aboutContent.description}
            </p>
            <a
              href="/about"
              class="inline-flex items-center gap-2 text-primary-600 font-bold hover:text-primary-700 transition-colors"
            >
              Learn More About Us
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 4: NEIGHBORHOODS GRID
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {neighborhoodsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {neighborhoodsContent.subheadline}
          </p>
        </div>

        <!-- Neighborhoods Grid -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          {neighborhoodsContent.areas.map((area) => (
            <a
              href={`/neighborhoods/${area.slug}`}
              class="bg-white rounded-xl p-6 border border-gray-200 text-center hover:shadow-lg hover:border-primary-600 transition-all group"
            >
              <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-3 group-hover:bg-primary-600 transition-colors">
                <svg class="w-5 h-5 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                {area.name}
              </span>
            </a>
          ))}
        </div>

        <!-- Don't See Your Area -->
        <p class="text-center mt-8 text-gray-600">
          Don't see your area? Call us at{' '}
          <a href={`tel:${site.phoneLink}`} class="text-blue-600 underline hover:text-blue-700">
            {site.phone}
          </a>
        </p>

      </div>
    </section>

    <!-- ==========================================
         SECTION 5: TESTIMONIALS
         ========================================== -->
    <section class="py-16 md:py-24 bg-[color:var(--color-surface)]">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {testimonialsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {testimonialsContent.subheadline}
          </p>
        </div>

        <!-- Testimonials Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {testimonialsContent.testimonials.map((testimonial, index) => {
            const timeAgo = index === 0 ? '2 weeks ago' : index === 1 ? '3 weeks ago' : '1 month ago';
            const avatarColors = [
              'from-blue-500 to-blue-600',
              'from-green-500 to-green-600',
              'from-purple-500 to-purple-600'
            ];
            return (
              <div class="bg-white rounded-lg p-6 border border-gray-200 shadow-md">
                <!-- Google review style -->
                <div>
                  <div class="flex items-start gap-3 mb-4">
                    <!-- Profile Avatar -->
                    <div class={`w-10 h-10 rounded-full bg-gradient-to-br ${avatarColors[index]} flex items-center justify-center flex-shrink-0`}>
                      <span class="text-white font-semibold text-sm">{testimonial.name.split(' ').map(n => n[0]).join('')}</span>
                    </div>
                    <div class="flex-1 min-w-0">
                      <!-- Name and Stars -->
                      <div class="flex items-center gap-2 mb-1">
                        <span class="font-semibold text-gray-900">{testimonial.name}</span>
                        <div class="flex gap-0.5">
                          {Array.from({ length: testimonial.rating }).map(() => (
                            <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                          ))}
                        </div>
                      </div>
                      <!-- Time and Location -->
                      <div class="flex items-center gap-2 text-xs text-gray-500 mb-3">
                        <span>{timeAgo}</span>
                        <span>Â·</span>
                        <span>{testimonial.location}</span>
                      </div>
                    </div>
                  </div>
                  <!-- Review Text -->
                  <p class="text-gray-700 leading-relaxed text-sm">{testimonial.text}</p>
                  <!-- Google Badge -->
                  <div class="mt-3 flex items-center gap-1">
                    <svg class="w-4 h-4 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                      <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                      <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                      <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                    </svg>
                    <span class="text-xs text-gray-500">Google</span>
                  </div>
                </div>
              </div>
            );
          })}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 6: SERVICE AREAS MAP
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {serviceAreasContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
            {serviceAreasContent.subheadline}
          </p>
          <p class="text-gray-600 max-w-3xl mx-auto leading-relaxed">
            {serviceAreasContent.description}
          </p>
        </div>

        <!-- Service Areas Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
          {serviceAreasContent.areas.map((area) => (
