---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import { site, services, neighborhoods } from '../config/site';

// ============================================
// PAGE METADATA
// ============================================
const pageData = {
  metaTitle: `${site.niche} Services in ${site.city}, ${site.state} | ${site.businessName}`,
  metaDescription: `Premium ${site.nicheLowercase} in ${site.city}, ${site.state}. Licensed experts, ${site.rating}-star rated, ${site.yearsInBusiness} years of craftsmanship. Call ${site.phone} to schedule a complimentary consultation.`,
};

// ============================================
// HERO SECTION CONTENT
// ============================================
const heroContent = {
  badge: `Luxury ${site.niche}`,
  headline: `${site.city} Luxury Home Services`,
  subheadline: `Custom, premium ${site.nicheLowercase} in ${site.city}, ${site.state}. Tailored solutions for custom pools, luxury renovations, and full estate management.`,
  image: 'https://images.unsplash.com/photo-1621905251189-08b45d6a269e?w=600&h=400&fit=crop',
  imageAlt: `Professional ${site.nicheLowercase} services in ${site.city}`,
  trustBadges: ['Licensed & Bonded', 'Award-Winning Design', 'Premium Materials', 'Satisfaction Guaranteed'],
};

// ============================================
// SERVICES GRID SECTION - Links DOWN to Silo Heads
// ============================================
const servicesContent = {
  headline: 'Our Services',
  subheadline: 'Professional solutions for all your home service needs',
  services: [
    {
      title: 'General Maintenance',
      slug: 'general-maintenance',
      description: 'Keep your property in top condition with regular maintenance and repairs.',
      icon: 'tools',
    },
    {
      title: 'Appliance Repair',
      slug: 'appliance-repair',
      description: 'Expert appliance repair services for all major brands and models.',
      icon: 'cog',
    },
    {
      title: 'Emergency Services',
      slug: 'emergency-services',
      description: '24/7 emergency response for urgent repairs when you need help fast.',
      icon: 'lightning',
    },
  ],
};

// ============================================
// ABOUT PREVIEW SECTION
// ============================================
const aboutContent = {
  headline: `Trusted ${site.city} Professionals`,
  subheadline: `${site.yearsInBusiness} years of quality service`,
  description: `${site.businessName} has been serving ${site.city} for over ${site.yearsInBusiness} years. Our team of licensed professionals is committed to delivering exceptional service with a focus on quality, reliability, and customer satisfaction. We're proud to be your trusted local experts.`,
  image: 'https://images.pexels.com/photos/1266025/pexels-photo-1266025.jpeg?w=500&h=400&fit=crop',
  imageAlt: 'Professional team at work',
};

// ============================================
// TESTIMONIALS SECTION
// ============================================
const testimonialsContent = {
  headline: 'What Our Customers Say',
  subheadline: 'Real reviews from real customers',
  testimonials: [
    {
      name: 'Sarah Johnson',
      location: 'Downtown Austin',
      rating: 5,
      text: 'Excellent service from start to finish. The team was professional, punctual, and did outstanding work. Highly recommend!',
    },
    {
      name: 'Michael Chen',
      location: 'North Austin',
      rating: 5,
      text: 'Very impressed with the quality of work and attention to detail. They exceeded my expectations and stayed within budget.',
    },
    {
      name: 'Emily Rodriguez',
      location: 'South Austin',
      rating: 5,
      text: 'Fast, reliable, and affordable. The technician was knowledgeable and took time to explain everything. Will definitely use again!',
    },
  ],
};

// ============================================
// SERVICE AREAS SECTION
// ============================================
const serviceAreasContent = {
  headline: 'Service Areas',
  subheadline: `Serving ${site.city} and surrounding communities`,
  description: `We proudly serve the entire ${site.serviceArea}, including all major neighborhoods and surrounding communities. Our local presence means faster response times and personalized service from professionals who know your area.`,
  areas: [
    'Downtown Austin',
    'North Austin',
    'South Austin',
    'East Austin',
    'West Austin',
    'Round Rock',
    'Pflugerville',
    'Cedar Park',
  ],
};


// ============================================
// NEIGHBORHOODS SECTION - Links to neighborhood info pages
// ============================================
const neighborhoodsContent = {
  headline: 'Areas We Serve',
  subheadline: `Proudly serving ${site.city} and surrounding neighborhoods`,
  areas: neighborhoods,
};


// ============================================
// FAQ SECTION
// ============================================
const faqContent = {
  headline: 'Frequently Asked Questions',
  questions: [
    { 
      q: 'Do you offer complimentary consultations?', 
      a: `Yes, we provide complimentary, no-obligation consultations for all ${site.nicheLowercase} services to understand your goals and tailor a solution.` 
    },
    { 
      q: 'Are you licensed and insured?', 
      a: `Yes, we are fully licensed and insured in ${site.state}.` 
    },
    { 
      q: 'What areas do you serve?', 
      a: `We serve ${site.city} and all surrounding neighborhoods within ${site.serviceArea}.` 
    },
    { 
      q: 'How do I schedule service?', 
      a: 'Call us or fill out the contact form to schedule a convenient time.' 
    },
    { 
      q: 'Do you offer warranties?', 
      a: 'Yes, all our work is backed by our satisfaction guarantee and warranty.' 
    },
  ],
};


// ============================================
// FINAL CTA SECTION
// ============================================
const ctaContent = {
  headline: 'Ready to Get Started?',
  subheadline: `Contact us today to discuss a custom, premium plan for your property.`,
};
---

<Layout title={pageData.metaTitle} description={pageData.metaDescription}>
  <div class="bg-[color:var(--color-surface)] text-gray-700">
    <Header />

    <!-- ==========================================
         SECTION 1: HERO - PREMIUM LUXURY
         ========================================== -->
    <section class="hero-section pt-10 pb-14 md:py-24">
      <div class="max-w-6xl mx-auto px-4 sm:px-5 lg:px-8">
        <div class="grid lg:grid-cols-5 gap-12 items-center">

          <!-- Left Column: Content -->
          <div class="lg:col-span-3">

            <!-- Luxury Badge -->
            <div class="inline-flex items-center gap-2 bg-accent-600 text-white text-xs font-semibold px-4 py-1.5 rounded-full mb-4 shadow-sm">
              <span>✨ Luxury Service</span>
            </div>

            <!-- Headline -->
            <h1 class="hero-heading text-3xl sm:text-4xl lg:text-5xl font-bold mb-4 leading-tight">
              Bespoke Home Services for {site.city}'s Finest Homes
            </h1>

            <!-- Subhead -->
            <p class="hero-subheading text-base sm:text-lg mb-6 max-w-2xl">
              From custom pools and luxury renovations to full estate management, our licensed experts deliver tailored, premium service with meticulous attention to detail.
            </p>

            <!-- Trust Logos Row -->
            <div class="mb-6">
              <p class="text-sm font-semibold text-slate-600 mb-3">
                Trusted by Austin's finest homes
              </p>
              <div class="flex flex-wrap items-center gap-3 text-xs sm:text-sm">
                <span class="inline-flex items-center gap-2 rounded-full bg-white/80 px-3 py-1 text-slate-700 shadow-sm">
                  <span class="font-semibold">BBB A+ Rated</span>
                </span>
                <span class="inline-flex items-center gap-2 rounded-full bg-white/80 px-3 py-1 text-slate-700 shadow-sm">
                  <span class="font-semibold">Houzz Best of 2024</span>
                </span>
                <span class="inline-flex items-center gap-2 rounded-full bg-white/80 px-3 py-1 text-slate-700 shadow-sm">
                  <span class="font-semibold">10+ Years Experience</span>
                </span>
              </div>
            </div>

            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-3">
              <a
                href={`tel:${site.phoneLink}`}
                class="w-full sm:flex-1 inline-flex items-center justify-center gap-2.5 bg-accent-600 hover:bg-accent-700 text-white font-semibold px-8 py-4 rounded-xl transition-colors shadow-lg hover:shadow-xl text-lg btn-cta"
              >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>Schedule Your Consultation</span>
              </a>

              <a
                href="/about"
                class="w-full sm:w-auto inline-flex items-center justify-center gap-2 bg-transparent border-2 border-primary-600 text-primary-700 hover:bg-primary-600 hover:text-white font-semibold px-8 py-4 rounded-xl transition-colors text-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>View Our Portfolio</span>
              </a>
            </div>

            <!-- Phone Number Text Link (visible on mobile) -->
            <p class="mt-4 text-center sm:text-left text-sm text-gray-600 md:hidden">
              Prefer to talk through options? Call us at{' '}
              <a href={`tel:${site.phoneLink}`} class="font-bold phone-link">{site.phone}</a>
            </p>

          </div>

          <!-- Right Column: Image (2/5) - Desktop Only -->
          <div class="lg:col-span-2 hidden lg:block">
            <div class="relative">
              <img
                src={heroContent.image}
                alt={heroContent.imageAlt}
                class="rounded-2xl shadow-2xl w-full h-auto"
                width="600"
                height="400"
                loading="eager"
              />
              <!-- Rating Badge Overlay -->
              <div class="absolute bottom-4 left-4 bg-white rounded-xl shadow-lg px-4 py-3 flex items-center gap-3">
                <div class="flex items-center gap-1">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="font-bold text-gray-900">{site.rating}</span>
                </div>
                <div class="text-sm text-gray-500">
                  {site.reviewCount} Reviews
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- ==========================================
         SECTION 2: SERVICES GRID
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {servicesContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {servicesContent.subheadline}
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {servicesContent.services.map((service) => (
            <a
              href={`/${service.slug}-${site.citySlug}`}
              class="bg-white rounded-2xl p-8 border-2 border-gray-200 hover:shadow-xl hover:border-primary-600 transition-all group"
            >
              <!-- Icon -->
              <div class="w-14 h-14 rounded-xl bg-primary-100 flex items-center justify-center mb-6 group-hover:bg-primary-600 transition-colors">
                {service.icon === 'tools' && (
                  <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                  </svg>
                )}
                {service.icon === 'lightning' && (
                  <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                )}
                {service.icon === 'cog' && (
                  <svg class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                {service.title}
              </h3>
              <p class="text-gray-600 mb-4">{service.description}</p>
              <span class="text-primary-600 font-semibold inline-flex items-center gap-2">
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 3: ABOUT PREVIEW
         ========================================== -->
    <section class="py-16 md:py-24 bg-[color:var(--color-surface)]">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <div class="grid lg:grid-cols-2 gap-12 items-center">

          <!-- Left Column: Image -->
          <div>
            <img
              src={aboutContent.image}
              alt={aboutContent.imageAlt}
              class="rounded-2xl shadow-xl w-full h-auto"
              width="500"
              height="400"
              loading="lazy"
            />
          </div>

          <!-- Right Column: Content -->
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
              {aboutContent.headline}
            </h2>
            <p class="text-xl text-primary-600 font-semibold mb-6">
              {aboutContent.subheadline}
            </p>
            <p class="text-gray-600 text-lg leading-relaxed mb-6">
              {aboutContent.description}
            </p>
            <a
              href="/about"
              class="inline-flex items-center gap-2 text-primary-600 font-bold hover:text-primary-700 transition-colors"
            >
              Learn More About Us
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 4: NEIGHBORHOODS GRID
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {neighborhoodsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {neighborhoodsContent.subheadline}
          </p>
        </div>

        <!-- Neighborhoods Grid -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          {neighborhoodsContent.areas.map((area) => (
            <a
              href={`/neighborhoods/${area.slug}`}
              class="bg-white rounded-xl p-6 border border-gray-200 text-center hover:shadow-lg hover:border-primary-600 transition-all group"
            >
              <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-3 group-hover:bg-primary-600 transition-colors">
                <svg class="w-5 h-5 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                {area.name}
              </span>
            </a>
          ))}
        </div>

        <!-- Don't See Your Area -->
        <p class="text-center mt-8 text-gray-600">
          Don't see your area? Call us at{' '}
          <a href={`tel:${site.phoneLink}`} class="text-blue-600 underline hover:text-blue-700">
            {site.phone}
          </a>
        </p>

      </div>
    </section>

    <!-- ==========================================
         SECTION 5: TESTIMONIALS
         ========================================== -->
    <section class="py-16 md:py-24 bg-[color:var(--color-surface)]">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {testimonialsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {testimonialsContent.subheadline}
          </p>
        </div>

        <!-- Testimonials Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {testimonialsContent.testimonials.map((testimonial) => (
            <div class="bg-white rounded-2xl p-8 shadow-lg">
              <!-- Rating Stars -->
              <div class="flex gap-1 mb-4">
                {Array.from({ length: testimonial.rating }).map(() => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <!-- Review Text -->
              <p class="text-gray-600 mb-6 leading-relaxed">"{testimonial.text}"</p>
              <!-- Author -->
              <div class="border-t border-gray-200 pt-4">
                <p class="font-bold text-gray-900">{testimonial.name}</p>
                <p class="text-sm text-gray-500">{testimonial.location}</p>
              </div>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 6: SERVICE AREAS MAP
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {serviceAreasContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
            {serviceAreasContent.subheadline}
          </p>
          <p class="text-gray-600 max-w-3xl mx-auto leading-relaxed">
            {serviceAreasContent.description}
          </p>
        </div>

        <!-- Service Areas Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
          {serviceAreasContent.areas.map((area) => (
            <div class="flex items-center gap-2 text-gray-700">
              <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium">{area}</span>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 7: FAQ
         ========================================== -->
    <section class="py-16 md:py-24 bg-[color:var(--color-surface)]">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">

        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {faqContent.headline}
          </h2>
        </div>

        <!-- FAQ Accordion -->
        <div class="max-w-3xl mx-auto">
          {faqContent.questions.map((faq, index) => (
            <details class="group border-b border-gray-200" open={index === 0}>
              <summary class="flex items-center justify-between py-6 cursor-pointer">
                <span class="font-bold text-gray-900 text-lg pr-4">{faq.q}</span>
                <svg class="w-5 h-5 text-gray-500 flex-shrink-0 chevron-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-gray-600 pb-6 pr-8">
                {faq.a}
              </p>
            </details>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 8: FINAL CTA
         ========================================== -->
    <section class="py-16 md:py-24 bg-primary-900">
      <div class="max-w-4xl mx-auto px-5 sm:px-8 text-center">
        
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          {ctaContent.headline}
        </h2>
        <p class="text-xl text-gray-200 mb-8">
          {ctaContent.subheadline}
        </p>

        <!-- Large Phone Button -->
        <a 
          href={`tel:${site.phoneLink}`}
