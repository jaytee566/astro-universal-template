---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import { site } from '../config/site';

// ============================================
// PAGE METADATA
// ============================================
const pageData = {
  metaTitle: `${site.niche} Services in ${site.city}, ${site.state} | ${site.businessName}`,
  metaDescription: `Professional ${site.nicheLowercase} services in ${site.city}, ${site.state}. Licensed experts, ${site.rating}-star rated, ${site.yearsInBusiness} years experience. Call ${site.phone} for a free estimate.`,
};

// ============================================
// HERO SECTION CONTENT
// ============================================
const heroContent = {
  badge: `Professional ${site.niche} Services`,
  headline: `Quality ${site.niche} You Can Trust`,
  subheadline: `Professional ${site.nicheLowercase} services in ${site.city}, ${site.state}. Licensed experts ready to help with all your home service needs.`,
  image: 'https://images.unsplash.com/photo-1621905251189-08b45d6a269e?w=600&h=400&fit=crop',
  imageAlt: `Professional ${site.nicheLowercase} services in ${site.city}`,
  trustBadges: ['Licensed & Insured', 'Satisfaction Guaranteed', 'Free Estimates'],
};

// ============================================
// PROBLEM CARDS SECTION
// ============================================
const problemContent = {
  headline: 'Why Professional Service Matters',
  subheadline: 'Protect your property with expert care',
  problems: [
    { 
      icon: 'shield', 
      title: 'Protect Your Investment', 
      description: 'Professional service protects your property value and prevents costly future repairs.' 
    },
    { 
      icon: 'clock', 
      title: 'Save Time & Stress', 
      description: 'Let experts handle the work while you focus on what matters most to you.' 
    },
    { 
      icon: 'check', 
      title: 'Guaranteed Results', 
      description: 'Our work is backed by a satisfaction guarantee and comprehensive warranty.' 
    },
  ],
};

// ============================================
// BEFORE/AFTER SECTION
// ============================================
const beforeAfterContent = {
  headline: 'Real Results from Real Projects',
  subheadline: `See the quality of our ${site.nicheLowercase} work`,
  before: {
    image: 'https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=500&h=350&fit=crop',
    alt: 'Before professional service',
    caption: 'Before',
  },
  after: {
    image: 'https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=500&h=400&fit=crop',
    alt: 'After professional service',
    caption: 'After',
  },
};

// ============================================
// NEIGHBORHOODS SECTION
// CRITICAL: These are the ONLY page navigation links on Hub
// ============================================
const neighborhoodsContent = {
  headline: 'Areas We Serve',
  subheadline: `Proudly serving ${site.city} and surrounding neighborhoods`,
  areas: [
    { name: 'Downtown', slug: 'downtown' },
    { name: 'North Austin', slug: 'north-austin' },
    { name: 'South Austin', slug: 'south-austin' },
    { name: 'East Austin', slug: 'east-austin' },
    { name: 'West Austin', slug: 'west-austin' },
  ],
};

// ============================================
// HOW IT WORKS SECTION
// ============================================
const howItWorksContent = {
  headline: 'How It Works',
  subheadline: 'Simple process, professional results',
  steps: [
    { number: '1', title: 'Contact Us', description: 'Call or fill out our form for a free consultation.' },
    { number: '2', title: 'Get a Quote', description: 'We assess your needs and provide a transparent estimate.' },
    { number: '3', title: 'We Do the Work', description: 'Our expert team completes the job professionally.' },
    { number: '4', title: 'Your Satisfaction', description: 'We ensure you are completely happy with the results.' },
  ],
};

// ============================================
// WHY CHOOSE US SECTION
// ============================================
const whyChooseContent = {
  headline: `Why ${site.city} Chooses Us`,
  subheadline: 'Trusted professionals serving your community',
  image: 'https://images.unsplash.com/photo-1600880292203-757bb62b4baf?w=500&h=400&fit=crop',
  imageAlt: `${site.businessName} professional team`,
  benefits: [
    { title: 'Licensed & Insured', description: `Fully certified with comprehensive coverage for your protection.` },
    { title: 'Local Experts', description: `Serving ${site.city} for over ${site.yearsInBusiness} years.` },
    { title: 'Transparent Pricing', description: 'Honest quotes with no hidden fees or surprises.' },
    { title: 'Satisfaction Guaranteed', description: 'We stand behind our work with a complete guarantee.' },
  ],
};

// ============================================
// FAQ SECTION
// ============================================
const faqContent = {
  headline: 'Frequently Asked Questions',
  questions: [
    { 
      q: 'Do you offer free estimates?', 
      a: `Yes, we provide free, no-obligation estimates for all ${site.nicheLowercase} services.` 
    },
    { 
      q: 'Are you licensed and insured?', 
      a: `Yes, we are fully licensed and insured in ${site.state}.` 
    },
    { 
      q: 'What areas do you serve?', 
      a: `We serve ${site.city} and all surrounding neighborhoods within ${site.serviceArea}.` 
    },
    { 
      q: 'How do I schedule service?', 
      a: 'Call us or fill out the contact form to schedule a convenient time.' 
    },
    { 
      q: 'Do you offer warranties?', 
      a: 'Yes, all our work is backed by our satisfaction guarantee and warranty.' 
    },
  ],
};

// ============================================
// FORM SECTION
// ============================================
const formContent = {
  headline: 'Request a Free Estimate',
  subheadline: 'Fill out this form and we\'ll get back to you shortly.',
};

// ============================================
// FINAL CTA SECTION
// ============================================
const ctaContent = {
  headline: 'Ready to Get Started?',
  subheadline: `Contact us today for professional ${site.nicheLowercase} you can trust.`,
};
---

<Layout title={pageData.metaTitle} description={pageData.metaDescription}>
  <div class="bg-white text-gray-700">
    <Header />

    <!-- ==========================================
         SECTION 1: HERO
         ========================================== -->
    <section class="hero-section py-16 md:py-24">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        <div class="grid lg:grid-cols-5 gap-12 items-center">
          
          <!-- Left Column: Content (3/5) -->
          <div class="lg:col-span-3">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-600 text-sm font-semibold px-4 py-2 rounded-full mb-6">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span>{heroContent.badge}</span>
            </div>

            <!-- Headline -->
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold hero-heading mb-6 leading-tight">
              {heroContent.headline}
            </h1>

            <!-- Subheadline -->
            <p class="text-xl hero-subheading mb-8 max-w-2xl">
              {heroContent.subheadline}
            </p>

            <!-- Trust Badges -->
            <div class="flex flex-wrap gap-4 mb-8">
              {heroContent.trustBadges.map((badge) => (
                <div class="flex items-center gap-2 text-sm font-medium hero-subheading">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{badge}</span>
                </div>
              ))}
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a 
                href={`tel:${site.phoneLink}`}
                class="inline-flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold px-8 py-4 rounded-xl transition-colors btn-cta text-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>Call {site.phone}</span>
              </a>
              <a 
                href={`sms:${site.phoneLink}`}
                class="inline-flex items-center justify-center gap-2 bg-white border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-bold px-8 py-4 rounded-xl transition-colors text-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                <span>Text Us</span>
              </a>
            </div>
          </div>

          <!-- Right Column: Image (2/5) -->
          <div class="lg:col-span-2 hidden lg:block">
            <div class="relative">
              <img 
                src={heroContent.image} 
                alt={heroContent.imageAlt}
                class="rounded-2xl shadow-2xl w-full h-auto"
                width="600"
                height="400"
                loading="eager"
              />
              <!-- Rating Badge Overlay -->
              <div class="absolute bottom-4 left-4 bg-white rounded-xl shadow-lg px-4 py-3 flex items-center gap-3">
                <div class="flex items-center gap-1">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="font-bold text-gray-900">{site.rating}</span>
                </div>
                <div class="text-sm text-gray-500">
                  {site.reviewCount} Reviews
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- ==========================================
         SECTION 2: PROBLEM CARDS
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {problemContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {problemContent.subheadline}
          </p>
        </div>

        <!-- Cards Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {problemContent.problems.map((problem) => (
            <div class="bg-white rounded-2xl p-8 border border-gray-200 hover:shadow-lg hover:border-primary-500 transition-all">
              <!-- Icon -->
              <div class="w-14 h-14 rounded-xl bg-primary-100 flex items-center justify-center mb-6">
                {problem.icon === 'shield' && (
                  <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                )}
                {problem.icon === 'clock' && (
                  <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
                {problem.icon === 'check' && (
                  <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{problem.title}</h3>
              <p class="text-gray-600">{problem.description}</p>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 3: BEFORE/AFTER
         ========================================== -->
    <section class="py-16 md:py-24 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {beforeAfterContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {beforeAfterContent.subheadline}
          </p>
        </div>

        <!-- Images Grid -->
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Before -->
          <div class="relative">
            <img 
              src={beforeAfterContent.before.image} 
              alt={beforeAfterContent.before.alt}
              class="rounded-xl shadow-lg w-full h-auto"
              width="500"
              height="350"
              loading="lazy"
            />
            <div class="absolute top-4 left-4 bg-gray-900 text-white text-sm font-bold px-4 py-2 rounded-lg">
              {beforeAfterContent.before.caption}
            </div>
          </div>
          
          <!-- After -->
          <div class="relative">
            <img 
              src={beforeAfterContent.after.image} 
              alt={beforeAfterContent.after.alt}
              class="rounded-xl shadow-lg w-full h-auto"
              width="500"
              height="350"
              loading="lazy"
            />
            <div class="absolute top-4 left-4 bg-primary-600 text-white text-sm font-bold px-4 py-2 rounded-lg">
              {beforeAfterContent.after.caption}
            </div>
          </div>
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 4: NEIGHBORHOODS
         CRITICAL: ONLY page links on Hub go here
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {neighborhoodsContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {neighborhoodsContent.subheadline}
          </p>
        </div>

        <!-- Neighborhoods Grid -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
          {neighborhoodsContent.areas.map((area) => (
            <a 
              href={`/neighborhoods/${area.slug}`}
              class="bg-white rounded-xl p-6 border border-gray-200 text-center hover:shadow-lg hover:border-primary-500 transition-all group"
            >
              <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-3">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                {area.name}
              </span>
            </a>
          ))}
        </div>

        <!-- Don't See Your Area -->
        <p class="text-center mt-8 text-gray-600">
          Don't see your area? Call us at{' '}
          <a href={`tel:${site.phoneLink}`} class="text-primary-600 font-bold hover:underline">
            {site.phone}
          </a>
        </p>

      </div>
    </section>

    <!-- ==========================================
         SECTION 5: HOW IT WORKS
         ========================================== -->
    <section class="py-16 md:py-24 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {howItWorksContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {howItWorksContent.subheadline}
          </p>
        </div>

        <!-- Steps Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {howItWorksContent.steps.map((step) => (
            <div class="text-center">
              <div class="text-5xl font-bold text-primary-600 mb-3">
                {step.number}
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">
                {step.title}
              </h3>
              <p class="text-gray-600">
                {step.description}
              </p>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 6: WHY CHOOSE US
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          
          <!-- Left Column: Content -->
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
              {whyChooseContent.headline}
            </h2>
            <p class="text-xl text-gray-600 mb-8">
              {whyChooseContent.subheadline}
            </p>

            <!-- Benefits List -->
            <div class="space-y-6">
              {whyChooseContent.benefits.map((benefit) => (
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-bold text-gray-900">{benefit.title}</h3>
                    <p class="text-gray-600">{benefit.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Right Column: Image -->
          <div class="hidden lg:block">
            <img 
              src={whyChooseContent.image} 
              alt={whyChooseContent.imageAlt}
              class="rounded-2xl shadow-xl w-full h-auto"
              width="500"
              height="400"
              loading="lazy"
            />
          </div>

        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 7: FAQ
         ========================================== -->
    <section class="py-16 md:py-24 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {faqContent.headline}
          </h2>
        </div>

        <!-- FAQ Accordion -->
        <div class="max-w-3xl mx-auto">
          {faqContent.questions.map((faq, index) => (
            <details class="group border-b border-gray-200" open={index === 0}>
              <summary class="flex items-center justify-between py-6 cursor-pointer">
                <span class="font-bold text-gray-900 text-lg pr-4">{faq.q}</span>
                <svg class="w-5 h-5 text-gray-500 flex-shrink-0 chevron-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <p class="text-gray-600 pb-6 pr-8">
                {faq.a}
              </p>
            </details>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 8: CONTACT FORM
         ========================================== -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {formContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {formContent.subheadline}
          </p>
        </div>

        <!-- Form -->
        <form class="max-w-2xl mx-auto bg-gray-50 rounded-2xl p-8 border border-gray-200">
          
          <!-- Row 1: Name + Phone -->
          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="name" class="block text-sm font-bold text-gray-700 mb-2">Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-600 focus:ring-2 focus:ring-primary-600 focus:ring-opacity-20 outline-none transition-colors"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-bold text-gray-700 mb-2">Phone</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                required
                class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-600 focus:ring-2 focus:ring-primary-600 focus:ring-opacity-20 outline-none transition-colors"
                placeholder="(555) 555-5555"
              />
            </div>
          </div>

          <!-- Row 2: Email -->
          <div class="mb-6">
            <label for="email" class="block text-sm font-bold text-gray-700 mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-600 focus:ring-2 focus:ring-primary-600 focus:ring-opacity-20 outline-none transition-colors"
              placeholder="your@email.com"
            />
          </div>

          <!-- Row 3: Message -->
          <div class="mb-6">
            <label for="message" class="block text-sm font-bold text-gray-700 mb-2">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-600 focus:ring-2 focus:ring-primary-600 focus:ring-opacity-20 outline-none transition-colors resize-none"
              placeholder="Tell us about your project..."
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full bg-primary-600 hover:bg-primary-700 text-white font-bold py-4 rounded-xl transition-colors text-lg"
          >
            Get Your Free Estimate
          </button>

        </form>

        <!-- Immediate Help -->
        <p class="text-center mt-6 text-gray-600">
          Need immediate help? Call{' '}
          <a href={`tel:${site.phoneLink}`} class="text-primary-600 font-bold hover:underline">
            {site.phone}
          </a>
        </p>

      </div>
    </section>

    <!-- ==========================================
         SECTION 9: FINAL CTA
         ========================================== -->
    <section class="py-16 md:py-24 bg-gray-900">
      <div class="max-w-4xl mx-auto px-5 sm:px-8 text-center">
        
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          {ctaContent.headline}
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          {ctaContent.subheadline}
        </p>

        <!-- Large Phone Button -->
        <a 
          href={`tel:${site.phoneLink}`}
          class="inline-flex items-center gap-3 bg-accent-600 hover:bg-accent-700 text-white font-bold text-2xl px-10 py-6 rounded-2xl transition-colors btn-cta"
        >
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>{site.phone}</span>
        </a>

        <!-- Trust Badges -->
        <div class="flex flex-wrap justify-center gap-6 mt-8 text-gray-400">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Licensed & Insured</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{site.rating}-Star Rated</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>{site.yearsInBusiness} Years Experience</span>
          </div>
        </div>

      </div>
    </section>

    <!-- Footer -->
    <Footer neighborhoods={neighborhoodsContent.areas} />
    
    <!-- Mobile Sticky CTA -->
    <StickyMobileCTA />

  </div>
</Layout>
