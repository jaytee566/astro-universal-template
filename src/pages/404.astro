---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import { site } from '../config/site';

// ============================================
// PAGE METADATA
// ============================================
const pageData = {
  metaTitle: `Page Not Found | ${site.businessName}`,
  metaDescription: `The page you're looking for doesn't exist. Visit ${site.businessName}'s homepage or contact us for ${site.nicheLowercase} in ${site.city}.`,
};

// Popular links to suggest
const popularLinks = [
  { title: 'Home', href: '/', description: `Return to ${site.businessName} homepage` },
  { title: 'About Us', href: '/about', description: 'Learn about our company and team' },
  { title: 'Contact', href: '/contact', description: 'Get in touch with us' },
  { title: 'FAQ', href: '/faq', description: 'Find answers to common questions' },
];
---

<Layout title={pageData.metaTitle} description={pageData.metaDescription}>
  <div class="bg-white text-gray-700">
    <Header />

    <!-- ==========================================
         404 CONTENT
         ========================================== -->
    <section class="py-20 md:py-32">
      <div class="max-w-4xl mx-auto px-5 sm:px-8 text-center">
        
        <!-- 404 Icon -->
        <div class="w-24 h-24 rounded-full bg-gray-100 flex items-center justify-center mx-auto mb-8">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>

        <!-- Error Code -->
        <p class="text-primary-600 font-bold text-lg mb-4">404 Error</p>

        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
          Page Not Found
        </h1>

        <!-- Description -->
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Sorry, we couldn't find the page you're looking for. It may have been moved, deleted, or the URL might be incorrect.
        </p>

        <!-- Primary CTA -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
          <a 
            href="/"
            class="inline-flex items-center justify-center gap-2 bg-primary-600 hover:bg-primary-700 text-white font-bold px-8 py-4 rounded-xl transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span>Back to Home</span>
          </a>
          <a 
            href={`tel:${site.phoneLink}`}
            class="inline-flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold px-8 py-4 rounded-xl transition-colors btn-cta"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span>Call {site.phone}</span>
          </a>
        </div>

        <!-- Popular Links -->
        <div class="border-t border-gray-200 pt-12">
          <h2 class="text-lg font-bold text-gray-900 mb-6">
            Popular Pages
          </h2>
          <div class="grid sm:grid-cols-2 gap-4 max-w-xl mx-auto">
            {popularLinks.map((link) => (
              <a 
                href={link.href}
                class="bg-gray-50 hover:bg-gray-100 rounded-xl p-4 text-left transition-colors group"
              >
                <div class="font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                  {link.title}
                </div>
                <div class="text-sm text-gray-500">
                  {link.description}
                </div>
              </a>
            ))}
          </div>
        </div>

      </div>
    </section>

    <!-- ==========================================
         HELP SECTION
         ========================================== -->
    <section class="py-12 md:py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-5 sm:px-8 text-center">
        
        <div class="w-16 h-16 rounded-full bg-primary-100 flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>

        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">
          Need Help?
        </h2>
        <p class="text-lg text-gray-600 mb-8 max-w-xl mx-auto">
          If you're looking for information about our {site.nicheLowercase} services in {site.city}, we're here to help.
        </p>

        <a 
          href="/contact"
          class="inline-flex items-center gap-2 text-primary-600 font-bold hover:text-primary-700 transition-colors"
        >
          <span>Contact our team</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>

      </div>
    </section>

    <!-- Footer - Static pages CAN show Service Areas -->
    <Footer hideServiceAreas={false} />
    
    <!-- Mobile Sticky CTA -->
    <StickyMobileCTA />

  </div>
</Layout>
