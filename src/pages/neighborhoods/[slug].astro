---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import StickyMobileCTA from '../../components/StickyMobileCTA.astro';
import { site, services, neighborhoods } from '../../config/site';

// ============================================
// STATIC PATHS - Generate pages from data
// In production, this data comes from Notion JSON
// ============================================
export async function getStaticPaths() {
  // Sample neighborhood data - replace with Notion data import
  const neighborhoods = [
    { 
      slug: 'downtown', 
      name: 'Downtown',
      description: 'The heart of the city with historic buildings and bustling business districts.',
      landmarks: ['City Hall', 'Central Park', 'Main Street District'],
    },
    { 
      slug: 'north-austin', 
      name: 'North Austin',
      description: 'Family-friendly neighborhoods with excellent schools and suburban charm.',
      landmarks: ['Domain Shopping Center', 'Tech Corridor', 'Stone Oak'],
    },
    { 
      slug: 'south-austin', 
      name: 'South Austin',
      description: 'Eclectic neighborhoods known for live music, food trucks, and local culture.',
      landmarks: ['South Congress', 'Zilker Park', 'Barton Springs'],
    },
    { 
      slug: 'east-austin', 
      name: 'East Austin',
      description: 'Vibrant arts district with galleries, breweries, and diverse dining options.',
      landmarks: ['East 6th Street', 'Mueller Development', 'French Place'],
    },
    { 
      slug: 'west-austin', 
      name: 'West Austin',
      description: 'Scenic hill country views with luxury homes and outdoor recreation.',
      landmarks: ['Lake Austin', 'Westlake Hills', 'Bee Cave'],
    },
  ];

  return neighborhoods.map((neighborhood) => ({
    params: { slug: neighborhood.slug },
    props: {
      neighborhood,
    },
  }));
}

// ============================================
// PAGE PROPS
// ============================================
const { neighborhood } = Astro.props;

// ============================================
// PAGE METADATA - Using site config interpolation
// ============================================
const pageData = {
  metaTitle: `${site.niche} Services in ${neighborhood.name}, ${site.city} | ${site.businessName}`,
  metaDescription: `Premium ${site.nicheLowercase} services in ${neighborhood.name}, ${site.city}. Licensed experts serving ${neighborhood.name} and surrounding areas. Call ${site.phone} to schedule a complimentary consultation.`,
};

// ============================================
// PAGE CONTENT - All interpolated from site config
// ============================================
const heroContent = {
  headline: `${site.niche} Services in ${neighborhood.name}`,
  subheadline: `Professional ${site.nicheLowercase} for homes and businesses in ${neighborhood.name}, ${site.city}. Fast response, licensed experts, satisfaction guaranteed.`,
};

// Hero Image
const heroImageUrl = 'https://images.unsplash.com/photo-1560518883-ce09059eeffa?w=600&h=400&fit=crop';
const heroImageAlt = `Professional ${site.nicheLowercase} services in ${neighborhood.name}, ${site.city}`;

const aboutContent = {
  headline: `Serving ${neighborhood.name}`,
  description: neighborhood.description,
  landmarks: neighborhood.landmarks,
};

const servicesContent = {
  headline: `Our Services in ${neighborhood.name}`,
  subheadline: `Complete ${site.nicheLowercase} solutions for ${neighborhood.name} residents`,
};

const whyContent = {
  headline: `Why ${neighborhood.name} Chooses Us`,
  benefits: [
    { title: 'Local Knowledge', description: `We know ${neighborhood.name} inside and out, from ${neighborhood.landmarks[0]} to every side street.` },
    { title: 'Fast Response', description: `Our team is nearby and ready to help ${neighborhood.name} residents quickly.` },
    { title: 'Trusted by Neighbors', description: `${site.reviewCount} happy customers across ${site.city}, including many in ${neighborhood.name}.` },
    { title: 'Licensed & Insured', description: `Fully certified to provide ${site.nicheLowercase} in ${site.state}.` },
  ],
};

const ctaContent = {
  headline: `Need ${site.niche} in ${neighborhood.name}?`,
  subheadline: `Contact us today for professional service you can trust.`,
};
---

<Layout title={pageData.metaTitle} description={pageData.metaDescription}>
  <div class="bg-white text-gray-700">
    <Header />

    <!-- ==========================================
         BREADCRUMB - Link UP to Hub (Kyle Roof)
         ========================================== -->
    <nav class="bg-gray-50 border-b border-gray-200">
      <div class="max-w-6xl mx-auto px-5 sm:px-8 py-4">
        <a 
          href="/"
          class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-medium transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span>Back to {site.city} {site.niche} Services</span>
        </a>
      </div>
    </nav>

    <!-- ==========================================
         SECTION 1: HERO
         ========================================== -->
    <section class="hero-section py-16 md:py-20">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        <div class="grid lg:grid-cols-5 gap-12 items-center">
          
          <!-- Left Column: Content (3/5) -->
          <div class="lg:col-span-3">
            <!-- Location Badge -->
            <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-600 text-sm font-semibold px-4 py-2 rounded-full mb-6">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{neighborhood.name}, {site.city}</span>
            </div>

            <!-- Headline -->
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold hero-heading mb-6 leading-tight">
              {heroContent.headline}
            </h1>

            <!-- Subheadline -->
            <p class="text-xl hero-subheading mb-8 max-w-2xl">
              {heroContent.subheadline}
            </p>

            <!-- Trust Badges -->
            <div class="flex flex-wrap gap-4 mb-8">
              {['Licensed & Bonded', `${site.rating}-Star Rated`, 'Complimentary Consultations'].map((badge) => (
                <div class="flex items-center gap-2 text-sm font-medium hero-subheading">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{badge}</span>
                </div>
              ))}
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a 
                href={`tel:${site.phoneLink}`}
                class="inline-flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold px-8 py-4 rounded-xl transition-colors btn-cta text-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>Call {site.phone}</span>
              </a>
              <a 
                href={`sms:${site.phoneLink}`}
                class="inline-flex items-center justify-center gap-2 bg-white border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-bold px-8 py-4 rounded-xl transition-colors text-lg"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                <span>Text Us</span>
              </a>
            </div>
          </div>

          <!-- Right Column: Image (2/5) -->
          <div class="lg:col-span-2 hidden lg:block">
            <div class="relative">
              <img 
                src={heroImageUrl} 
                alt={heroImageAlt}
                class="rounded-2xl shadow-2xl w-full h-auto"
                width="600"
                height="400"
                loading="eager"
              />
              <!-- Rating Badge Overlay -->
              <div class="absolute bottom-4 left-4 bg-white rounded-xl shadow-lg px-4 py-3 flex items-center gap-3">
                <div class="flex items-center gap-1">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="font-bold text-gray-900">{site.rating}</span>
                </div>
                <div class="text-sm text-gray-500">
                  {site.reviewCount} Reviews
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- ==========================================
         SECTION 2: ABOUT THE NEIGHBORHOOD
         ========================================== -->
    <section class="py-16 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <div class="grid lg:grid-cols-2 gap-12 items-start">
          
          <!-- Left: About Content -->
          <div>
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
              {aboutContent.headline}
            </h2>
            <p class="text-lg text-gray-600 mb-6">
              {aboutContent.description}
            </p>
            <p class="text-lg text-gray-600 mb-6">
              Our team proudly serves {neighborhood.name} homeowners and businesses with professional {site.nicheLowercase}. Whether you're near {neighborhood.landmarks[0]} or anywhere in the {neighborhood.name} area, we're ready to help.
            </p>
            
            <!-- Local Landmarks -->
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
              <h3 class="font-bold text-gray-900 mb-3">Areas We Serve in {neighborhood.name}</h3>
              <ul class="space-y-2">
                {aboutContent.landmarks.map((landmark) => (
                  <li class="flex items-center gap-2 text-gray-600">
                    <svg class="w-4 h-4 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{landmark}</span>
                  </li>
                ))}
                <li class="flex items-center gap-2 text-gray-600">
                  <svg class="w-4 h-4 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>And all surrounding areas</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- Right: Quick Stats -->
          <div class="bg-gray-50 rounded-2xl p-8 border border-gray-200">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Why {neighborhood.name} Trusts Us</h3>
            
            <div class="space-y-6">
              <div class="flex items-center gap-4">
                <div class="w-14 h-14 rounded-xl bg-primary-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                </div>
                <div>
                  <div class="text-2xl font-bold text-gray-900">{site.rating} Stars</div>
                  <div class="text-gray-600">{site.reviewCount} verified reviews</div>
                </div>
              </div>

              <div class="flex items-center gap-4">
                <div class="w-14 h-14 rounded-xl bg-primary-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <div class="text-2xl font-bold text-gray-900">{site.yearsInBusiness} Years</div>
                  <div class="text-gray-600">Serving {site.city} area</div>
                </div>
              </div>

              <div class="flex items-center gap-4">
                <div class="w-14 h-14 rounded-xl bg-primary-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <div>
                  <div class="text-2xl font-bold text-gray-900">Licensed</div>
                  <div class="text-gray-600">Fully insured in {site.state}</div>
                </div>
              </div>
            </div>

            <!-- CTA -->
            <a 
              href={`tel:${site.phoneLink}`}
              class="mt-8 w-full inline-flex items-center justify-center gap-2 bg-accent-600 hover:bg-accent-700 text-white font-bold px-6 py-4 rounded-xl transition-colors btn-cta"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>Call for Complimentary Consultation</span>
            </a>
          </div>

        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 3: SERVICES GRID
         Links DOWN to Service pages (Kyle Roof)
         ========================================== -->
    <section class="py-16 md:py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {servicesContent.headline}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {servicesContent.subheadline}
          </p>
        </div>

        <!-- Services Grid - Links DOWN to /services/[service]-[neighborhood] -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {services.map((service) => (
            <a 
              href={`/services/${service.slug}-${neighborhood.slug}`}
              class="bg-white rounded-2xl p-6 border border-gray-200 hover:shadow-lg hover:border-primary-500 transition-all group"
            >
              <!-- Service Icon -->
              <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center mb-4 group-hover:bg-primary-600 transition-colors">
                <svg class="w-6 h-6 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              
              <!-- Service Name -->
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
                {service.name}
              </h3>
              
              <!-- Location Context -->
              <p class="text-gray-600 mb-4">
                Professional {service.name.toLowerCase()} for {neighborhood.name} homes and businesses.
              </p>
              
              <!-- Learn More Link -->
              <span class="inline-flex items-center gap-1 text-primary-600 font-semibold">
                Get {service.name} in {neighborhood.name}
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </a>
          ))}
        </div>

        <!-- Additional CTA -->
        <div class="text-center mt-10">
          <p class="text-gray-600 mb-4">
            Don't see what you need? We offer comprehensive {site.nicheLowercase} solutions.
          </p>
          <a 
            href={`tel:${site.phoneLink}`}
            class="inline-flex items-center gap-2 text-primary-600 font-bold hover:underline"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call {site.phone} to discuss your needs
          </a>
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 4: WHY CHOOSE US
         ========================================== -->
    <section class="py-16 md:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {whyContent.headline}
          </h2>
        </div>

        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-2 gap-8">
          {whyContent.benefits.map((benefit) => (
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">{benefit.title}</h3>
                <p class="text-gray-600">{benefit.description}</p>
              </div>
            </div>
          ))}
        </div>

      </div>
    </section>

    <!-- ==========================================
         SECTION 5: FINAL CTA
         ========================================== -->
    <section class="py-16 md:py-20 bg-gray-900">
      <div class="max-w-4xl mx-auto px-5 sm:px-8 text-center">
        
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          {ctaContent.headline}
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          {ctaContent.subheadline}
        </p>

        <!-- Large Phone Button -->
        <a 
          href={`tel:${site.phoneLink}`}
          class="inline-flex items-center gap-3 bg-accent-600 hover:bg-accent-700 text-white font-bold text-2xl px-10 py-6 rounded-2xl transition-colors btn-cta"
        >
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>{site.phone}</span>
        </a>

        <!-- Trust Badges -->
        <div class="flex flex-wrap justify-center gap-6 mt-8 text-gray-400">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Serving {neighborhood.name}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Licensed & Insured</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Complimentary Consultations</span>
          </div>
        </div>

      </div>
    </section>

    <!-- Footer - Show neighborhoods since this is outside the silo structure -->
    <Footer neighborhoods={neighborhoods} />
    
    <!-- Mobile Sticky CTA -->
    <StickyMobileCTA />

  </div>
</Layout>
